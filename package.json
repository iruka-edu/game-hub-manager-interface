{
  "name": "game-hub-manager-interface",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "build:node": "USE_NODE_ADAPTER=true astro build",
    "build:vercel": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:devices": "node scripts/automated-testing.js",
    "test:devices:local": "node scripts/automated-testing.js http://localhost:4321",
    "test:devices:staging": "node scripts/automated-testing.js https://game-hub-manager-interface.vercel.app",
    "validate:manifest": "ajv -s schema/manifest.schema.json -d \"games-dist/games/**/manifest.json\" --spec=draft7 --errors=text",
    "iruka-game:validate": "node scripts/validate-game.js",
    "seed:users": "tsx scripts/seed-users.ts",
    "hard-delete-games": "tsx scripts/hard-delete-all-games.ts",
    "deploy:storage": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-storage.ps1",
    "setup": "pnpm dlx dotenv-cli -- pnpm add @iruka-edu/game-core@latest"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/node": "^9.5.1",
    "@astrojs/vercel": "^9.0.2",
    "@google-cloud/storage": "^7.18.0",
    "@iruka-edu/game-core": "^0.1.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/bcryptjs": "^3.0.0",
    "astro": "^5.16.5",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "jszip": "^3.10.1",
    "mongodb": "^7.0.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "fast-check": "^4.4.0",
    "puppeteer": "^23.0.0",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  }
}
