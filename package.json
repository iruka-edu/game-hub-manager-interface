{
  "name": "game-hub-manager-interface",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "preinstall": "npm config set @iruka-edu:registry https://npm.pkg.github.com/",
    "dev": "next dev",
    "build": "next build",
    "build:next": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:responsive": "playwright test",
    "test:responsive:ui": "playwright test --ui",
    "test:responsive:headed": "playwright test --headed",
    "test:upload": "tsx scripts/test-upload-flow.ts",
    "test:container": "tsx scripts/test-upload-container.ts",
    "test:devices": "node scripts/automated-testing.js",
    "test:devices:local": "node scripts/automated-testing.js http://localhost:3000",
    "test:devices:staging": "node scripts/automated-testing.js https://game-hub-manager-interface.vercel.app",
    "validate:manifest": "ajv -s schema/manifest.schema.json -d \"games-dist/games/**/manifest.json\" --spec=draft7 --errors=text",
    "iruka-game:validate": "node scripts/validate-game.js",
    "seed:users": "tsx scripts/seed-users.ts",
    "hard-delete-games": "tsx scripts/hard-delete-all-games.ts",
    "deploy:storage": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-storage.ps1",
    "setup": "pnpm dlx dotenv-cli -- pnpm add @iruka-edu/game-core @iruka-edu/mini-game-sdk",
    "setup-auth": "tsx scripts/setup-github-auth.ts",
    "update-game-core": "tsx scripts/update-game-core.ts",
    "force-update-game-core": "tsx scripts/force-update-game-core.ts",
    "check-game-core": "tsx scripts/update-game-core.ts --check-only",
    "auto-update": "bash scripts/auto-update-deps.sh",
    "auto-update:win": "powershell -ExecutionPolicy Bypass -File ./scripts/auto-update-deps.ps1"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.18.0",
    "@iruka-edu/game-core": "^0.2.0",
    "@iruka-edu/mini-game-sdk": "^0.3.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.16",
    "@types/bcryptjs": "^3.0.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.3",
    "jszip": "^3.10.1",
    "jwt-decode": "^4.0.0",
    "mongodb": "^7.0.0",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/react": "^16.1.0",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "ajv": "^8.17.1",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.0",
    "fast-check": "^4.4.0",
    "puppeteer": "^23.0.0",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  }
}
