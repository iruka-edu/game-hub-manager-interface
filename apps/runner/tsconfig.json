{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",           // Đổi từ NodeNext/ESNext sang CommonJS
    "moduleResolution": "node",     // Đổi về node
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,        // Rất quan trọng để dùng import với CommonJS
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}