{
    "name": "@iruka/runner",
    "private": true,
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/server.js",
        "test:pw": "playwright test --workers=1",
        "serve:hub": "http-server ./public -p 4173 -c-1",
        "report": "playwright show-report"
    },
    "dependencies": {
        "@google-cloud/storage": "^7.0.0",
        "@types/node": "^25.0.9",
        "dotenv": "^17.2.3",
        "express": "^4.19.2",
        "http-server": "^14.1.1",
        "nanoid": "^5.0.0",
        "playwright": "^1.57.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@types/express": "^5.0.6",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.3"
    }
}