<script>
  let currentGameId = '';
  let currentDisabled = false;
  
  const rolloutSlider = document.getElementById('rolloutSlider') as HTMLInputElement;
  const rolloutValue = document.getElementById('rolloutValue');
  rolloutSlider?.addEventListener('input', () => { if (rolloutValue) rolloutValue.textContent = rolloutSlider.value; });
  
  // Publish Modal
  const publishModal = document.getElementById('publishModal');
  document.querySelectorAll('.publish-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      currentGameId = (btn as HTMLElement).dataset.gameId || '';
      const title = document.getElementById('publishGameTitle');
      if (title) title.textContent = (btn as HTMLElement).dataset.gameTitle || '';
      const rollout = (btn as HTMLElement).dataset.rollout || '100';
      if (rolloutSlider) rolloutSlider.value = rollout;
      if (rolloutValue) rolloutValue.textContent = rollout;
      publishModal?.classList.remove('hidden');
      publishModal?.classList.add('flex');
    });
  });
  
  document.getElementById('cancelPublish')?.addEventListener('click', () => { publishModal?.classList.add('hidden'); publishModal?.classList.remove('flex'); });
  
  document.getElementById('confirmPublish')?.addEventListener('click', async () => {
    if (!currentGameId) return;
    const rolloutPercentage = parseInt(rolloutSlider?.value || '100');
    try {
      const response = await fetch(`/api/games/${currentGameId}/publish`, {
        method: 'POST', headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ setAsLive: true, rolloutPercentage })
      });
      if (response.ok) window.location.reload();
      else { const data = await response.json(); alert(data.error || 'Có lỗi xảy ra'); }
    } catch { alert('Có lỗi xảy ra'); }
  });
  
  // Disable Modal
  const disableModal = document.getElementById('disableModal');
  document.querySelectorAll('.disable-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      currentGameId = (btn as HTMLElement).dataset.gameId || '';
      currentDisabled = (btn as HTMLElement).dataset.disabled === 'true';
      const title = document.getElementById('disableGameTitle');
      if (title) title.textContent = (btn as HTMLElement).dataset.gameTitle || '';
      const reasonContainer = document.getElementById('disableReasonContainer');
      if (currentDisabled && reasonContainer) reasonContainer.style.display = 'none';
      else if (reasonContainer) reasonContainer.style.display = 'block';
      disableModal?.classList.remove('hidden');
      disableModal?.classList.add('flex');
    });
  });
  
  document.getElementById('cancelDisable')?.addEventListener('click', () => { disableModal?.classList.add('hidden'); disableModal?.classList.remove('flex'); });
  
  document.getElementById('confirmDisable')?.addEventListener('click', async () => {
    if (!currentGameId) return;
    const reason = (document.getElementById('disableReason') as HTMLTextAreaElement)?.value || '';
    if (!currentDisabled && !reason.trim()) { alert('Vui lòng nhập lý do'); return; }
    try {
      const response = await fetch(`/api/games/${currentGameId}/disable`, {
        method: 'POST', headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ disabled: !currentDisabled, reason })
      });
      if (response.ok) window.location.reload();
      else { const data = await response.json(); alert(data.error || 'Có lỗi xảy ra'); }
    } catch { alert('Có lỗi xảy ra'); }
  });
  
  // Archive Modal
  const archiveModal = document.getElementById('archiveModal');
  document.querySelectorAll('.archive-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      currentGameId = (btn as HTMLElement).dataset.gameId || '';
      const title = document.getElementById('archiveGameTitle');
      if (title) title.textContent = (btn as HTMLElement).dataset.gameTitle || '';
      archiveModal?.classList.remove('hidden');
      archiveModal?.classList.add('flex');
    });
  });
  
  document.getElementById('cancelArchive')?.addEventListener('click', () => { archiveModal?.classList.add('hidden'); archiveModal?.classList.remove('flex'); });
  
  document.getElementById('confirmArchive')?.addEventListener('click', async () => {
    if (!currentGameId) return;
    try {
      const response = await fetch('/api/games/archive', {
        method: 'POST', headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ gameId: currentGameId })
      });
      if (response.ok) window.location.reload();
      else { const data = await response.json(); alert(data.error || 'Có lỗi xảy ra'); }
    } catch { alert('Có lỗi xảy ra'); }
  });
  
  // Republish
  document.querySelectorAll('.republish-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const gameId = (btn as HTMLElement).dataset.gameId || '';
      const versionId = (btn as HTMLElement).dataset.versionId || '';
      if (!gameId || !versionId) { alert('Không tìm thấy version'); return; }
      if (!confirm('Xuất bản lại game này?')) return;
      try {
        const response = await fetch('/api/games/republish', {
          method: 'POST', headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ gameId, versionId })
        });
        if (response.ok) window.location.reload();
        else { const data = await response.json(); alert(data.error || 'Có lỗi xảy ra'); }
      } catch { alert('Có lỗi xảy ra'); }
    });
  });
</script>
