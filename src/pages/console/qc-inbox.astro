---
import ConsoleLayout from '../../layouts/ConsoleLayout.astro';
import type { User } from '../../models/User';

type QCInboxItem = {
  versionId: string;
  gameId: string;
  gameTitle: string;
  devName: string;
  version: string;
  submittedAt: string;
  retestCount: number;
  subject?: string;
};

const user = Astro.locals.user as User;

// gọi API nội bộ và forward cookie để auth hoạt động
const res = await fetch(new URL('/api/qc/inbox', Astro.url.origin), {
  headers: {
    cookie: Astro.request.headers.get('cookie') ?? '',
  },
});

let items: QCInboxItem[] = [];
if (res.ok) {
  const data = await res.json();
  items = data.items;
} else {
  // optional: log lỗi
  items = [];
}

// sort: ưu tiên re-test trước, rồi submittedAt mới nhất trước
items.sort((a, b) => {
  if (a.retestCount > 0 && b.retestCount === 0) return -1;
  if (a.retestCount === 0 && b.retestCount > 0) return 1;
  return new Date(b.submittedAt).getTime() - new Date(a.submittedAt).getTime();
});

const devOptions = Array.from(new Set(items.map(i => i.devName))).sort((a, b) => a.localeCompare(b));
const subjectOptions = Array.from(new Set(items.map(i => i.subject).filter(Boolean) as string[])).sort((a, b) => a.localeCompare(b));
---

<ConsoleLayout title="QC Inbox" user={user} activeMenu="qc-inbox">
  <div class="p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-slate-900">QC Inbox</h1>
      <p class="text-slate-500 mt-1">Các game đang chờ bạn kiểm tra chất lượng</p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl p-6 border border-slate-200">
        <p class="text-sm text-slate-500">Đang chờ QC</p>
        <p class="text-3xl font-bold text-blue-600 mt-1">{items.length}</p>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl border border-slate-200 p-4 mb-6">
      <div class="flex flex-col md:flex-row md:items-end gap-4">
        <div class="flex-1">
          <label class="block text-sm font-medium text-slate-700 mb-1">Theo Dev</label>
          <select id="filter-dev" class="w-full px-3 py-2 border border-slate-300 rounded-lg bg-white">
            <option value="">Tất cả</option>
            {devOptions.map(d => <option value={d}>{d}</option>)}
          </select>
        </div>

        <div class="flex-1">
          <label class="block text-sm font-medium text-slate-700 mb-1">Theo môn học</label>
          <select id="filter-subject" class="w-full px-3 py-2 border border-slate-300 rounded-lg bg-white">
            <option value="">Tất cả</option>
            {subjectOptions.map(s => <option value={s}>{s}</option>)}
          </select>
        </div>

        <div class="flex gap-2">
          <button id="filter-reset" class="btn-secondary">Reset</button>
        </div>
      </div>
    </div>

    <!-- Games List -->
    {items.length > 0 ? (
      <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
        <table class="w-full">
          <thead class="bg-slate-50 border-b border-slate-200">
            <tr>
              <th class="text-left px-6 py-4 text-sm font-semibold text-slate-700">Game</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-slate-700">Version</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-slate-700">Dev phụ trách</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-slate-700">Ngày gửi</th>
              <th class="text-left px-6 py-4 text-sm font-semibold text-slate-700">Lần QC</th>
              <th class="text-right px-6 py-4 text-sm font-semibold text-slate-700">Thao tác</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            {items.map(item => (
              <tr
                class={`hover:bg-slate-50 transition-colors ${item.retestCount > 0 ? 'bg-amber-50' : ''}`}
                data-dev={item.devName}
                data-subject={item.subject || ''}
              >
                <td class="px-6 py-4">
                  <a href={`/console/games/${item.gameId}/review?versionId=${item.versionId}`} class="block">
                    <div class="flex items-center gap-2">
                      <p class="font-medium text-slate-900 hover:text-indigo-600">{item.gameTitle}</p>
                      {item.retestCount > 0 && (
                        <span class="px-2 py-0.5 text-xs font-medium bg-amber-100 text-amber-700 rounded-full">
                          QC Lại (Lần {item.retestCount + 1})
                        </span>
                      )}
                    </div>
                  </a>
                </td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 text-sm font-mono bg-slate-100 text-slate-700 rounded">
                    v{item.version}
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-slate-600">
                  {item.devName}
                </td>
                <td class="px-6 py-4 text-sm text-slate-500">
                  {new Date(item.submittedAt).toLocaleDateString('vi-VN')}
                </td>
                <td class="px-6 py-4 text-sm text-slate-600">
                  {item.retestCount > 0 ? (
                    <span class="text-amber-600 font-medium">Lần {item.retestCount + 1}</span>
                  ) : (
                    <span class="text-green-600">Lần đầu</span>
                  )}
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center justify-end gap-2">
                    <a
                      href={`/console/games/${item.gameId}/review?versionId=${item.versionId}`}
                      class="px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors"
                    >
                      Mở review
                    </a>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    ) : (
      <div class="bg-white rounded-xl border border-slate-200 p-16 text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-green-100 flex items-center justify-center">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-900 mb-2">Không có game nào đang chờ QC</h3>
        <p class="text-slate-500">Bạn có thể xem lại các game đã QC ở thư viện game.</p>
        <a href="/console/library" class="inline-block mt-4 text-indigo-600 hover:text-indigo-800 font-medium">
          Xem thư viện game →
        </a>
      </div>
    )}
  </div>
  <script is:inline>
    const devSel = document.getElementById('filter-dev');
    const subjectSel = document.getElementById('filter-subject');
    const resetBtn = document.getElementById('filter-reset');

    function applyFilter() {
      const dev = devSel?.value || '';
      const subject = subjectSel?.value || '';

      document.querySelectorAll('tbody tr[data-dev]').forEach((tr) => {
        const trDev = tr.getAttribute('data-dev') || '';
        const trSubject = tr.getAttribute('data-subject') || '';
        const okDev = !dev || trDev === dev;
        const okSubject = !subject || trSubject === subject;

        if (tr instanceof HTMLElement) {
          tr.style.display = (okDev && okSubject) ? '' : 'none';
        }
      });
    }

    devSel?.addEventListener('change', applyFilter);
    subjectSel?.addEventListener('change', applyFilter);
    resetBtn?.addEventListener('click', () => {
      if (devSel) devSel.value = '';
      if (subjectSel) subjectSel.value = '';
      applyFilter();
    });
  </script>
</ConsoleLayout>
