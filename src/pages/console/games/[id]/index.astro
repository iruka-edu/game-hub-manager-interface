            {currentStatus === 'draft' && 'Game đang ở trạng thái nháp. Dev có thể chỉnh sửa và gửi QC khi sẵn sàng.'}
            {currentStatus === 'uploaded' && 'Game đang chờ QC kiểm tra chất lượng.'}
            {currentStatus === 'qc_processing' && 'QC đang tiến hành kiểm tra game này.'}
            {currentStatus === 'qc_passed' && 'Game đã qua QC và đang chờ CTO/CEO phê duyệt.'}
            {currentStatus === 'qc_failed' && 'Game cần được Dev chỉnh sửa theo feedback của QC.'}
            {currentStatus === 'approved' && 'Game đã được duyệt và đang chờ Admin xuất bản.'}
            {currentStatus === 'published' && 'Game đã được xuất bản và học sinh có thể chơi.'}
