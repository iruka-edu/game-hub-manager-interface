<script>
  // Auto-hide error message and clean URL
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.has('error')) {
    // Clean URL after 5 seconds
    setTimeout(() => {
      urlParams.delete('error');
      urlParams.delete('status');
      const newUrl = window.location.pathname + (urlParams.toString() ? '?' + urlParams.toString() : '');
      window.history.replaceState({}, '', newUrl);
    }, 5000);
  }

  // Load Game Preview
  document.getElementById('load-game-btn')?.addEventListener('click', (e) => {
    const button = e.target as HTMLButtonElement;
    const gameUrl = button.dataset.gameUrl;
    const thumbnail = document.getElementById('game-thumbnail');
    const iframe = document.getElementById('game-iframe') as HTMLIFrameElement;
    
    if (gameUrl && thumbnail && iframe) {
      // Show loading state
      button.textContent = 'Đang tải...';
      button.disabled = true;
      
      // Set iframe src and show it
      iframe.src = gameUrl;
      iframe.onload = () => {
        thumbnail.classList.add('hidden');
        iframe.classList.remove('hidden');
        button.textContent = 'Tải lại Game';
        button.disabled = false;
      };
      
      iframe.onerror = () => {
        button.textContent = 'Lỗi - Thử lại';
        button.disabled = false;
      };
    }
  });

  // Edit Info Toggle
  const editInfoBtn = document.getElementById('edit-info-btn');
  const cancelEditBtn = document.getElementById('cancel-edit-btn');
  const viewMode = document.getElementById('info-view-mode');
  const editMode = document.getElementById('info-edit-mode');

  editInfoBtn?.addEventListener('click', () => {
    viewMode?.classList.add('hidden');
    editMode?.classList.remove('hidden');
  });

  cancelEditBtn?.addEventListener('click', () => {
    editMode?.classList.add('hidden');
    viewMode?.classList.remove('hidden');
  });

  // Thumbnail Upload Handlers
  const desktopInput = document.getElementById('desktop-thumbnail-input') as HTMLInputElement;
  const mobileInput = document.getElementById('mobile-thumbnail-input') as HTMLInputElement;

  desktopInput?.addEventListener('change', (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (file) {
      // Validate file size (2MB limit)
      if (file.size > 2 * 1024 * 1024) {
        alert('Kích thước file phải nhỏ hơn 2MB');
        desktopInput.value = '';
        return;
      }

      // Validate file type
      if (!file.type.startsWith('image/')) {
        alert('Chỉ chấp nhận file hình ảnh (PNG, JPG, GIF)');
        desktopInput.value = '';
        return;
      }

      const reader = new FileReader();
      reader.onload = (e) => {
        const preview = document.getElementById('desktop-thumbnail-preview') as HTMLImageElement;
        if (preview) {
          preview.src = e.target?.result as string;
        }
      };
      reader.readAsDataURL(file);
    }
  });

  mobileInput?.addEventListener('change', (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (file) {
      // Validate file size (2MB limit)
      if (file.size > 2 * 1024 * 1024) {
        alert('Kích thước file phải nhỏ hơn 2MB');
        mobileInput.value = '';
        return;
      }

      // Validate file type
      if (!file.type.startsWith('image/')) {
        alert('Chỉ chấp nhận file hình ảnh (PNG, JPG, GIF)');
        mobileInput.value = '';
        return;
      }

      const reader = new FileReader();
      reader.onload = (e) => {
        const preview = document.getElementById('mobile-thumbnail-preview') as HTMLImageElement;
        if (preview) {
          preview.src = e.target?.result as string;
        }
      };
      reader.readAsDataURL(file);
    }
  });

  // Update Info Form
  document.getElementById('update-info-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);
    const gameId = window.location.pathname.split('/').pop();

    // Show loading state
    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitBtn.textContent;
    submitBtn.textContent = 'Đang lưu...';
    submitBtn.disabled = true;

    try {
      const response = await fetch(`/api/games/${gameId}/update-info`, {
        method: 'POST',
        body: formData
      });

      const data = await response.json();

      if (response.ok) {
        // Update main thumbnail display if new thumbnails were uploaded
        if (data.game.thumbnailDesktop || data.game.thumbnailMobile) {
          const mainThumbnail = document.querySelector('#game-thumbnail img') as HTMLImageElement;
          if (mainThumbnail) {
            const newThumbnail = data.game.thumbnailDesktop || data.game.thumbnailMobile;
            mainThumbnail.src = newThumbnail;
            mainThumbnail.style.display = 'block';
            // Hide the fallback placeholder
            const placeholder = mainThumbnail.nextElementSibling as HTMLElement;
            if (placeholder) {
              placeholder.style.display = 'none';
            }
          }
        }

        alert('Đã cập nhật thông tin game thành công!');
        window.location.reload();
      } else {
        alert(data.error || 'Có lỗi xảy ra khi cập nhật thông tin');
      }
    } catch (error) {
      console.error('Update failed:', error);
      alert('Có lỗi mạng hoặc lỗi server xảy ra');
    } finally {
      // Reset button state
      submitBtn.textContent = originalText;
      submitBtn.disabled = false;
    }
  });

  // Submit QC
  document.getElementById('submit-qc-btn')?.addEventListener('click', async (e) => {
    const gameId = (e.target as HTMLElement).dataset.gameId;
    if (!confirm('Bạn có chắc muốn gửi game này để QC kiểm tra?')) return;
    
    try {
      const response = await fetch('/api/games/submit-qc', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ gameId })
      });
      
      const data = await response.json();
      
      if (response.ok) {
        window.location.reload();
      } else {
        alert(data.error || 'Có lỗi xảy ra khi gửi QC');
      }
    } catch (error) { 
      console.error(error);
      alert('Có lỗi mạng hoặc lỗi server xảy ra'); 
    }
  });
  
  // Approve
  document.getElementById('approve-btn')?.addEventListener('click', async (e) => {
    const gameId = (e.target as HTMLElement).dataset.gameId;
    if (!confirm('Bạn có chắc muốn duyệt game này?')) return;
    
    try {
      const response = await fetch('/api/games/approve', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ gameId })
      });
      if (response.ok) window.location.reload();
      else alert('Có lỗi xảy ra');
    } catch { alert('Có lỗi xảy ra'); }
  });
  
  // Publish
  document.getElementById('publish-btn')?.addEventListener('click', async (e) => {
    const gameId = (e.target as HTMLElement).dataset.gameId;
    if (!confirm('Bạn có chắc muốn xuất bản game này? Học sinh sẽ có thể chơi game.')) return;
    
    try {
      const response = await fetch('/api/games/publish', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ gameId })
      });
      if (response.ok) window.location.reload();
      else alert('Có lỗi xảy ra');
    } catch { alert('Có lỗi xảy ra'); }
  });

  // Self-QA
  const selfQaList = document.getElementById('self-qa-list');
  const saveSelfQaBtn = document.getElementById('save-self-qa');
  
  saveSelfQaBtn?.addEventListener('click', async () => {
    const gameId = selfQaList?.dataset.gameId;
    const checkboxes = selfQaList?.querySelectorAll('.self-qa-check') as NodeListOf<HTMLInputElement>;
    const noteInput = document.getElementById('self-qa-note') as HTMLTextAreaElement;
    
    const checklist: any = {};
    checkboxes.forEach(cb => {
      const fieldId = cb.dataset.itemId;
      if (fieldId) {
        checklist[fieldId] = cb.checked;
      }
    });
    
    try {
      const response = await fetch('/api/games/self-qa', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ gameId, checklist, note: noteInput?.value })
      });
      
      const data = await response.json();
      
      if (response.ok) {
        alert('Đã lưu Self-QA');
        window.location.reload(); // Reload to refresh warning state
      } else {
        alert(data.error || 'Có lỗi xảy ra');
      }
    } catch { alert('Có lỗi mạng hoặc lỗi server xảy ra'); }
  });
</script>
