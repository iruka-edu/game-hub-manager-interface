    </div>
    )}

    {tab === 'qc' && (
    <div class="space-y-6">
      {qcReports.length === 0 ? (
        <div class="bg-white rounded-xl border border-slate-200 p-6">
          <p class="text-slate-500 text-center py-8">Chưa có QC report</p>
        </div>
      ) : (
        qcReports.map((report, idx) => (
          <div class="bg-white rounded-xl border border-slate-200 p-6">
            <div class="flex items-center justify-between mb-4">
