---
import Layout from '../../../layouts/Layout.astro';
import { GameRepository } from '../../../models/Game';
import { GameVersionRepository } from '../../../models/GameVersion';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/');
}

// Find game in MongoDB
let game = null;
let versions: any[] = [];
let error = null;

try {
  const gameRepo = await GameRepository.getInstance();
  const versionRepo = await GameVersionRepository.getInstance();
  
  // Try finding by gameId (string) first, as that's what the URL likely contains
  const allGames = await gameRepo.findAll();
  game = allGames.find(g => g.gameId === id || g._id.toString() === id);

  if (!game) {
    error = `Game "${id}" không tồn tại`;
  } else {
    // Get all versions using the game's _id
    versions = await versionRepo.findByGameId(game._id.toString());
  }
} catch (err) {
  console.error(err);
  error = 'Lỗi hệ thống';
}

const activeVersionId = game?.latestVersionId?.toString();
---

<Layout title={`${game?.title || 'Game'} - Lịch sử phiên bản`}>
  <div class="max-w-5xl mx-auto px-4 md:px-8 py-8 animate-fade-in">
    
    <!-- Breadcrumb & Header -->
    <div class="mb-8">
      <a href="/" class="inline-flex items-center gap-2 text-sm font-bold text-slate-400 hover:text-indigo-600 mb-4 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
        Quay lại Dashboard
      </a>
      
      {game ? (
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
          <div>
            <div class="flex items-center gap-3 mb-1">
               <h1 class="text-3xl font-black text-slate-900 tracking-tight">{game.title}</h1>
               <span class="px-2 py-0.5 rounded text-xs font-bold bg-slate-100 text-slate-500 uppercase">{game.gameId}</span>
            </div>
            <p class="text-slate-500 font-medium">Quản lý các bản build và trạng thái phát hành</p>
          </div>
          
          <a href={`/upload?gameId=${game.gameId}`} class="flex items-center gap-2 px-5 py-3 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white font-bold shadow-lg shadow-indigo-200 transition-all active:scale-95">
             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
             Upload Version Mới
          </a>
        </div>
      ) : (
        <div class="p-8 bg-red-50 text-red-700 rounded-2xl border border-red-100 font-bold text-center">
           {error || "Không tìm thấy thông tin game"}
        </div>
      )}
    </div>

    {game && (
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main List -->
        <div class="lg:col-span-2 space-y-6">
           <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
             <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
               <h3 class="font-bold text-slate-700">Danh sách phiên bản ({versions.length})</h3>
             </div>
             
             <div class="divide-y divide-slate-100">
               {versions.length > 0 ? versions.slice().reverse().map((v) => {
                 const isActive = activeVersionId === v._id.toString();
                 return (
                   <div class={`p-5 flex items-start gap-4 transition-colors hover:bg-slate-50 group ${isActive ? 'bg-indigo-50/30' : ''}`}>
                      <!-- Status Icon -->
                      <div class="pt-1">
                        {isActive ? (
                          <div class="w-8 h-8 rounded-full bg-emerald-100 text-emerald-600 flex items-center justify-center shadow-sm ring-2 ring-white">
                             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                          </div>
                        ) : (
                          <div class="w-8 h-8 rounded-full bg-slate-100 text-slate-400 flex items-center justify-center">
                             <span class="text-xs font-black">v</span>
                          </div>
                        )}
                      </div>

                      <div class="flex-1 min-w-0">
                         <div class="flex items-center gap-3">
                            <h4 class="text-lg font-bold text-slate-900">v{v.version}</h4>
                            {isActive && <span class="px-2 py-0.5 rounded text-[10px] font-black bg-emerald-100 text-emerald-700 uppercase tracking-wide">Live</span>}
                         </div>
                         <div class="flex items-center gap-x-4 gap-y-1 flex-wrap mt-1 text-xs text-slate-500 font-medium">
                            <span class="flex items-center gap-1">
                               <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                               {new Date(v.createdAt).toLocaleDateString('vi-VN', {day:'2-digit', month:'2-digit', year:'numeric', hour:'2-digit', minute:'2-digit'})}
                            </span>
                            <span class="flex items-center gap-1">
                               <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path></svg>
                               {(v.buildSize ? (v.buildSize / (1024*1024)).toFixed(2) : '0')} MB
                            </span>
                         </div>
                      </div>

                      <!-- Actions -->
                      <div class="flex items-center gap-2">
                         <a href={`/play/${game.gameId}?v=${v.version}`} class="p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors" title="Chơi thử">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                         </a>
                         
                         {!isActive && (
                            <button 
                              class="set-active-btn p-2 text-slate-400 hover:text-emerald-600 hover:bg-emerald-50 rounded-lg transition-colors"
                              title="Kích hoạt version này"
                              data-game-id={game._id.toString()}
                              data-version={v.version}
                            >
                               <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            </button>
                         )}

                         <button 
                            class="delete-version-btn p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                            title="Xóa phiên bản"
                            disabled={isActive}
                            data-game-id={game._id.toString()}
                            data-version={v.version}
                         >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                         </button>
                      </div>
                   </div>
                 );
               }) : (
                 <div class="p-12 text-center">
                    <div class="w-16 h-16 bg-slate-50 text-slate-300 rounded-full flex items-center justify-center mx-auto mb-4">
                       <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
                    </div>
                    <p class="text-slate-500 font-medium">Chưa có phiên bản nào.</p>
                 </div>
               )}
             </div>
           </div>
        </div>

        <!-- Sidebar Info -->
        <div class="space-y-6">
           <div class="bg-indigo-900 rounded-2xl p-6 text-white shadow-xl shadow-indigo-900/20">
              <h3 class="text-xs font-black uppercase tracking-widest text-indigo-200 mb-6">Thông tin kỹ thuật</h3>
              <ul class="space-y-4">
                 <li class="flex items-center justify-between">
                    <span class="text-indigo-200 text-sm font-medium">Runtime</span>
                    <span class="font-mono font-bold">{game.manifest?.runtime || 'iframe-html'}</span>
                 </li>
                 <li class="flex items-center justify-between">
                    <span class="text-indigo-200 text-sm font-medium">Owner</span>
                    <span class="font-bold">{game.ownerId || 'Admin'}</span>
                 </li>
                 <li class="flex items-center justify-between">
                    <span class="text-indigo-200 text-sm font-medium">Tổng versions</span>
                    <span class="font-bold">{versions.length}</span>
                 </li>
                 <li class="flex items-center justify-between">
                    <span class="text-indigo-200 text-sm font-medium">Dung lượng ước tính</span>
                    <span class="font-bold">
                       {versions.length > 0 ? (versions[0].buildSize ? (versions[0].buildSize / 1024 / 1024).toFixed(1) : '< 1') : '0'} MB
                    </span>
                 </li>
              </ul>
           </div>

           <div class="bg-white rounded-2xl p-6 border border-slate-200 shadow-sm">
              <h3 class="text-sm font-bold text-slate-900 mb-2">Hướng dẫn</h3>
              <p class="text-xs text-slate-500 leading-relaxed">
                 Để rollback về phiên bản cũ, hãy tìm version mong muốn trong danh sách và bấm nút <span class="font-bold text-emerald-600">Kích hoạt</span>. 
                 Hệ thống sẽ cập nhật CDN ngay lập tức.
              </p>
           </div>
        </div>
      </div>
    )}
  </div>

  <script>
     // Interactive Logic
     document.querySelectorAll('.set-active-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
           const id = (e.currentTarget as any).dataset.gameId;
           const ver = (e.currentTarget as any).dataset.version;
           if(confirm(`Xác nhận kích hoạt phiên bản ${ver}?`)) {
              try {
                const res = await fetch('/api/games/set-active', {
                   method: 'POST',
                   headers: {'Content-Type': 'application/json'},
                   body: JSON.stringify({ gameId: id, version: ver })
                });
                if(res.ok) window.location.reload();
                else alert('Lỗi kích hoạt');
              } catch(e) { alert('Lỗi kết nối'); }
           }
        });
     });

     document.querySelectorAll('.delete-version-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
           const id = (e.currentTarget as any).dataset.gameId;
           const ver = (e.currentTarget as any).dataset.version;
           if(confirm(`Xóa vĩnh viễn phiên bản ${ver}?`)) {
              try {
                 const res = await fetch(`/api/games/delete?id=${id}&version=${ver}`, { method: 'DELETE' });
                 if(res.ok) window.location.reload();
                 else alert('Lỗi xóa');
              } catch(e) { alert('Lỗi kết nối'); }
           }
        });
     });
  </script>
</Layout>