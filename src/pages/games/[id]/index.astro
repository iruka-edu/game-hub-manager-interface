---
import Layout from '../../../layouts/Layout.astro';
import { RegistryManager } from '../../../lib/registry';

const { id } = Astro.params;

// Find game in registry
let game = null;
let error = null;

try {
  const registry = await RegistryManager.get();
  game = registry.games.find(g => g.id === id);
  
  if (!game) {
    error = `Game "${id}" không tồn tại trong registry`;
  }
} catch (err) {
  console.error('Failed to load game:', err);
  error = 'Không thể tải thông tin game';
}

const CDN_BASE = `https://storage.googleapis.com/${import.meta.env.GCLOUD_BUCKET_NAME || 'iruka-edu-mini-game'}`;
---

<Layout title={game ? `${game.title} - Thông tin Game` : 'Game không tìm thấy'}>
  <div class="min-h-screen bg-slate-50 py-8">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex items-center gap-4 mb-4">
          <a 
            href="/" 
            class="text-slate-500 hover:text-slate-900 transition-colors flex items-center gap-2 text-sm font-medium"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Quay lại Dashboard
          </a>
        </div>
        
        {game ? (
          <div class="flex items-start justify-between">
            <div>
              <h1 class="text-3xl font-bold text-slate-900 mb-2">{game.title}</h1>
              <p class="text-slate-500 font-mono text-sm mb-4">{game.id}</p>
              <div class="flex items-center gap-4">
                <span class="px-3 py-1 rounded-full text-sm font-medium bg-green-50 text-green-700 border border-green-200">
                  Đang chạy: v{game.activeVersion}
                </span>
                <span class="text-slate-500 text-sm">
                  {game.versions.length} phiên bản
                </span>
              </div>
            </div>
            
            <div class="flex items-center gap-2">
              <a
                href={`/play/${game.id}`}
                class="px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-medium transition-colors text-sm flex items-center gap-2"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"/>
                </svg>
                Chơi Game
              </a>
              <a
                href={`/games/${game.id}/edit`}
                class="px-4 py-2 rounded-lg border border-slate-200 text-slate-700 hover:bg-slate-50 font-medium transition-colors text-sm flex items-center gap-2"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Sửa thông tin
              </a>
            </div>
          </div>
        ) : (
          <div>
            <h1 class="text-3xl font-bold text-slate-900 mb-2">Game không tìm thấy</h1>
            <p class="text-slate-500">{error}</p>
          </div>
        )}
      </div>

      {game ? (
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Main Info -->
          <div class="lg:col-span-2 space-y-6">
            <!-- Game Details -->
            <div class="card p-6">
              <h2 class="text-xl font-semibold text-slate-900 mb-4">Thông tin cơ bản</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-slate-600 mb-1">Game ID</label>
                  <p class="font-mono text-slate-900 bg-slate-50 px-3 py-2 rounded-md">{game.id}</p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-600 mb-1">Tên hiển thị</label>
                  <p class="text-slate-900 bg-slate-50 px-3 py-2 rounded-md">{game.title}</p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-600 mb-1">Phiên bản hiện tại</label>
                  <p class="font-mono text-slate-900 bg-slate-50 px-3 py-2 rounded-md">v{game.activeVersion}</p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-600 mb-1">Runtime</label>
                  <p class="text-slate-900 bg-slate-50 px-3 py-2 rounded-md">{game.manifest?.runtime || 'iframe-html'}</p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-600 mb-1">Người phụ trách</label>
                  <p class="text-slate-900 bg-slate-50 px-3 py-2 rounded-md">{game.owner || 'Admin'}</p>
                </div>
                <div>
                  <label class="block text-sm font-medium text-slate-600 mb-1">Cập nhật lần cuối</label>
                  <p class="text-slate-900 bg-slate-50 px-3 py-2 rounded-md">{new Date(game.updatedAt).toLocaleDateString('vi-VN')}</p>
                </div>
              </div>
            </div>

            <!-- Capabilities -->
            {game.capabilities && game.capabilities.length > 0 && (
              <div class="card p-6">
                <h2 class="text-xl font-semibold text-slate-900 mb-4">Tính năng Game</h2>
                <div class="flex flex-wrap gap-2">
                  {game.capabilities.map((cap) => (
                    <span class="px-3 py-1.5 rounded-md text-sm font-medium bg-blue-50 text-blue-700 border border-blue-200">
                      {cap}
                    </span>
                  ))}
                </div>
              </div>
            )}

            <!-- URLs -->
            <div class="card p-6">
              <h2 class="text-xl font-semibold text-slate-900 mb-4">Liên kết</h2>
              <div class="space-y-3">
                <div>
                  <label class="block text-sm font-medium text-slate-600 mb-1">Entry URL</label>
                  <div class="flex items-center gap-2">
                    <p class="flex-1 font-mono text-sm text-slate-900 bg-slate-50 px-3 py-2 rounded-md break-all">
                      {game.entryUrl}
                    </p>
                    <a
                      href={game.entryUrl}
                      target="_blank"
                      class="px-3 py-2 text-sm font-medium text-indigo-600 hover:text-indigo-700 border border-indigo-200 rounded-md hover:bg-indigo-50 transition-colors shrink-0"
                    >
                      Mở
                    </a>
                  </div>
                </div>
                
                {game.manifest?.iconUrl && (
                  <div>
                    <label class="block text-sm font-medium text-slate-600 mb-1">Icon URL</label>
                    <div class="flex items-center gap-2">
                      <p class="flex-1 font-mono text-sm text-slate-900 bg-slate-50 px-3 py-2 rounded-md break-all">
                        {game.manifest.iconUrl}
                      </p>
                      <a
                        href={game.manifest.iconUrl}
                        target="_blank"
                        class="px-3 py-2 text-sm font-medium text-indigo-600 hover:text-indigo-700 border border-indigo-200 rounded-md hover:bg-indigo-50 transition-colors shrink-0"
                      >
                        Xem
                      </a>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="space-y-6">
            <!-- Quick Actions -->
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-slate-900 mb-4">Hành động nhanh</h3>
              <div class="space-y-2">
                <a
                  href={`/play/${game.id}`}
                  class="w-full px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-medium transition-colors text-sm flex items-center justify-center gap-2"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                  Chơi Game
                </a>
                
                <a
                  href={`/games/${game.id}/new-version`}
                  class="w-full px-4 py-2 rounded-lg bg-emerald-600 hover:bg-emerald-700 text-white font-medium transition-colors text-sm flex items-center justify-center gap-2"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  Phiên bản mới
                </a>
                
                <a
                  href={`/games/${game.id}/versions`}
                  class="w-full px-4 py-2 rounded-lg border border-slate-200 text-slate-700 hover:bg-slate-50 font-medium transition-colors text-sm flex items-center justify-center gap-2"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Quản lý phiên bản
                </a>
                
                <a
                  href={`/games/${game.id}/edit`}
                  class="w-full px-4 py-2 rounded-lg border border-slate-200 text-slate-700 hover:bg-slate-50 font-medium transition-colors text-sm flex items-center justify-center gap-2"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  Sửa thông tin
                </a>
              </div>
            </div>

            <!-- Version Summary -->
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-slate-900 mb-4">Phiên bản</h3>
              <div class="space-y-3">
                <div class="flex justify-between items-center">
                  <span class="text-sm text-slate-600">Tổng số phiên bản:</span>
                  <span class="font-semibold text-slate-900">{game.versions.length}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-slate-600">Phiên bản mới nhất:</span>
                  <span class="font-mono text-sm font-semibold text-slate-900">
                    v{game.versions[game.versions.length - 1]?.version || game.activeVersion}
                  </span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-slate-600">Đang chạy:</span>
                  <span class="font-mono text-sm font-semibold text-green-700">v{game.activeVersion}</span>
                </div>
              </div>
            </div>

            <!-- Manifest JSON -->
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-slate-900 mb-4">Manifest JSON</h3>
              <div class="relative">
                <pre class="bg-slate-900 text-slate-100 p-4 rounded-lg text-xs overflow-x-auto max-h-64 overflow-y-auto"><code>{JSON.stringify(game.manifest, null, 2)}</code></pre>
                <button
                  id="copyManifest"
                  class="absolute top-2 right-2 px-2 py-1 text-xs bg-slate-700 hover:bg-slate-600 text-slate-200 rounded transition-colors"
                  title="Copy to clipboard"
                >
                  Copy
                </button>
              </div>
            </div>
          </div>
        </div>
      ) : (
        <div class="card p-8 text-center">
          <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-slate-200 flex items-center justify-center">
            <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h2 class="text-xl font-bold text-slate-900 mb-2">Game không tồn tại</h2>
          <p class="text-slate-500 mb-6">{error}</p>
          <a 
            href="/" 
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-semibold transition-colors text-sm"
          >
            Quay lại Dashboard
          </a>
        </div>
      )}
    </div>
  </div>
</Layout>

<script>
  // Copy manifest to clipboard
  document.getElementById('copyManifest')?.addEventListener('click', async () => {
    const manifestElement = document.querySelector('pre code');
    if (manifestElement) {
      try {
        await navigator.clipboard.writeText(manifestElement.textContent || '');
        const button = document.getElementById('copyManifest');
        if (button) {
          const originalText = button.textContent;
          button.textContent = 'Copied!';
          setTimeout(() => {
            button.textContent = originalText;
          }, 2000);
        }
      } catch (err) {
        console.error('Failed to copy manifest:', err);
      }
    }
  });
</script>