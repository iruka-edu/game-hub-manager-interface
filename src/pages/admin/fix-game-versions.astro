<script>
  const dryRunBtn = document.getElementById('dryRunBtn') as HTMLButtonElement;
  const fixBtn = document.getElementById('fixBtn') as HTMLButtonElement;
  const resultsDiv = document.getElementById('results') as HTMLDivElement;
  const loadingDiv = document.getElementById('loading') as HTMLDivElement;
  const errorDiv = document.getElementById('error') as HTMLDivElement;
  const summaryDiv = document.getElementById('summary') as HTMLDivElement;
  const resultsBody = document.getElementById('resultsBody') as HTMLTableSectionElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLParagraphElement;
  const specificGameDiv = document.getElementById('specificGameDiv') as HTMLDivElement;
  const gameIdInput = document.getElementById('gameId') as HTMLInputElement;

  // Handle fix mode change
  document.querySelectorAll('input[name="fixMode"]').forEach(radio => {
    radio.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      if (target.value === 'specific') {
        specificGameDiv.classList.remove('hidden');
      } else {
        specificGameDiv.classList.add('hidden');
      }
    });
  });

  function getFixOptions() {
    const fixMode = (document.querySelector('input[name="fixMode"]:checked') as HTMLInputElement)?.value || 'all';
    const gameId = gameIdInput.value.trim();
    
    if (fixMode === 'specific' && !gameId) {
      throw new Error('Vui l√≤ng nh·∫≠p Game ID');
    }
    
    return { fixMode, gameId };
  }

  async function runFix(dryRun: boolean) {
    // Hide previous results
    resultsDiv.classList.add('hidden');
    errorDiv.classList.add('hidden');
    loadingDiv.classList.remove('hidden');

    // Disable buttons
    dryRunBtn.disabled = true;
    fixBtn.disabled = true;

    try {
      const { fixMode, gameId } = getFixOptions();
      
      const payload: any = { dryRun };
      if (fixMode === 'specific') {
        payload.gameId = gameId;
      }

      const response = await fetch('/api/admin/fix-game-versions', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(payload),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Fix failed');
      }

      // Show results
      loadingDiv.classList.add('hidden');
      resultsDiv.classList.remove('hidden');

      // Update summary
      const prefix = dryRun ? '[DRY RUN] ' : '';
      summaryDiv.textContent = `${prefix}Total: ${data.summary.total}, Needs Update: ${data.summary.needsUpdate}, Updated: ${data.summary.updated}`;

      // Populate table
      resultsBody.innerHTML = '';
      for (const result of data.results) {
        const row = document.createElement('tr');
        row.className = 'hover:bg-slate-50';
        
        const actionClass = result.action === 'update_latest_version' 
          ? 'bg-yellow-100 text-yellow-700' 
          : 'bg-gray-100 text-gray-700';
        const actionLabel = result.action === 'update_latest_version' 
          ? (dryRun ? 'Will Update' : (result.updated ? 'Updated' : 'Failed'))
          : 'No Action';

        const statusClass = result.updated === true 
          ? 'bg-green-100 text-green-700'
          : result.updated === false
          ? 'bg-red-100 text-red-700'
          : 'bg-gray-100 text-gray-700';
        const statusLabel = result.updated === true 
          ? 'Success'
          : result.updated === false
          ? 'Failed'
          : 'Pending';

        row.innerHTML = `
          <td class="px-4 py-3">
            <div class="text-sm font-medium text-slate-900">${result.title || 'Untitled'}</div>
            <div class="text-xs text-slate-500 font-mono">${result.gameId}</div>
            <div class="text-xs text-slate-500">${result.gameSlug}</div>
          </td>
          <td class="px-4 py-3 text-sm">
            <div>Latest: ${result.currentLatestVersionId ? 
              `<span class="font-mono text-xs">${result.currentLatestVersionId.substring(0, 8)}...</span>` : 
              '<span class="text-red-500">null</span>'}</div>
            ${result.currentLiveVersionId ? 
              `<div class="text-xs text-slate-500">Live: ${result.currentLiveVersionId.substring(0, 8)}...</div>` : 
              ''}
          </td>
          <td class="px-4 py-3 text-sm text-slate-500">${result.versionsFound} found</td>
          <td class="px-4 py-3">
            <span class="px-2 py-1 rounded text-xs font-medium ${actionClass}">${actionLabel}</span>
            ${result.newLatestVersion ? 
              `<div class="text-xs text-slate-500 mt-1">‚Üí ${result.newLatestVersion}</div>` : 
              ''}
          </td>
          <td class="px-4 py-3">
            <span class="px-2 py-1 rounded text-xs font-medium ${statusClass}">${statusLabel}</span>
          </td>
        `;
        resultsBody.appendChild(row);
      }

    } catch (error: any) {
      loadingDiv.classList.add('hidden');
      errorDiv.classList.remove('hidden');
      errorMessage.textContent = error.message;
    } finally {
      dryRunBtn.disabled = false;
      fixBtn.disabled = false;
    }
  }

  dryRunBtn.addEventListener('click', () => runFix(true));
  fixBtn.addEventListener('click', () => {
    const { fixMode } = getFixOptions();
    const confirmMessage = fixMode === 'all' 
      ? 'B·∫°n c√≥ ch·∫Øc mu·ªën fix t·∫•t c·∫£ games c√≥ v·∫•n ƒë·ªÅ v·ªÅ version references?'
      : 'B·∫°n c√≥ ch·∫Øc mu·ªën fix game n√†y?';
    
    if (confirm(confirmMessage)) {
      runFix(false);
    }
  });
</script>