<script>
  const dryRunBtn = document.getElementById('dryRunBtn') as HTMLButtonElement;
  const syncBtn = document.getElementById('syncBtn') as HTMLButtonElement;
  const resultsDiv = document.getElementById('results') as HTMLDivElement;
  const loadingDiv = document.getElementById('loading') as HTMLDivElement;
  const errorDiv = document.getElementById('error') as HTMLDivElement;
  const summaryDiv = document.getElementById('summary') as HTMLDivElement;
  const resultsBody = document.getElementById('resultsBody') as HTMLTableSectionElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLParagraphElement;

  function getSelectedStatus(): string {
    const radio = document.querySelector('input[name="status"]:checked') as HTMLInputElement;
    return radio?.value || 'published';
  }

  async function runSync(dryRun: boolean) {
    // Hide previous results
    resultsDiv.classList.add('hidden');
    errorDiv.classList.add('hidden');
    loadingDiv.classList.remove('hidden');

    // Disable buttons
    dryRunBtn.disabled = true;
    syncBtn.disabled = true;

    try {
      const status = getSelectedStatus();
      const response = await fetch(`/api/admin/sync-from-gcs?dryRun=${dryRun}&status=${status}`, {
        method: 'POST',
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Sync failed');
      }

      // Show results
      loadingDiv.classList.add('hidden');
      resultsDiv.classList.remove('hidden');

      // Update summary
      const prefix = dryRun ? '[DRY RUN] ' : '';
      summaryDiv.textContent = `${prefix}Created: ${data.summary.created}, Skipped: ${data.summary.skipped}`;

      // Populate table
      resultsBody.innerHTML = '';
      for (const result of data.results) {
        const row = document.createElement('tr');
        row.className = 'hover:bg-slate-50';
        
        const actionClass = result.action === 'created' 
          ? 'bg-green-100 text-green-700' 
          : 'bg-gray-100 text-gray-700';
        const actionLabel = result.action === 'created' 
          ? (dryRun ? 'Will Create' : 'Created')
          : 'Skipped';

        row.innerHTML = `
          <td class="px-4 py-3 text-sm font-mono text-slate-600">${result.gameId}</td>
          <td class="px-4 py-3 text-sm text-slate-900">${result.title}</td>
          <td class="px-4 py-3 text-sm text-slate-500">${result.versions.join(', ')}</td>
          <td class="px-4 py-3">
            <span class="px-2 py-1 rounded text-xs font-medium ${actionClass}">${actionLabel}</span>
            ${result.error ? `<span class="ml-2 text-xs text-red-500">${result.error}</span>` : ''}
          </td>
        `;
        resultsBody.appendChild(row);
      }

    } catch (error: any) {
      loadingDiv.classList.add('hidden');
      errorDiv.classList.remove('hidden');
      errorMessage.textContent = error.message;
    } finally {
      dryRunBtn.disabled = false;
      syncBtn.disabled = false;
    }
  }

  dryRunBtn.addEventListener('click', () => runSync(true));
  syncBtn.addEventListener('click', () => {
    if (confirm('B·∫°n c√≥ ch·∫Øc mu·ªën sync games t·ª´ GCS? Games ƒë√£ t·ªìn t·∫°i s·∫Ω ƒë∆∞·ª£c b·ªè qua.')) {
      runSync(false);
    }
  });
</script>
