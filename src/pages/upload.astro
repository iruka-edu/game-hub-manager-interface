---
import Layout from "../layouts/Layout.astro";
import GameUploadForm from "../components/GameUploadForm.astro";
import { getUserFromRequest } from "../lib/session";
import type { User } from "../models/User";

const user = (await getUserFromRequest(Astro.request)) as User | null;

// Permission check
const hasRole = (role: string) => user?.roles?.includes(role as any) ?? false;
const canUpload = hasRole("dev") || hasRole("admin");

if (!user) return Astro.redirect("/login?redirect=/upload");
if (!canUpload) return Astro.redirect("/dashboard?error=unauthorized");
---

<Layout title="Tải Game Mới - Iruka Console">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Compact Header -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center gap-4">
        <a
          href="/"
          class="w-9 h-9 rounded-lg bg-white border border-slate-200 flex items-center justify-center text-slate-500 hover:text-iruka-blue hover:border-blue-300 transition-all shadow-sm"
          title="Quay lại Dashboard"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path></svg
          >
        </a>
        <div>
          <h1
            class="text-xl font-black text-slate-900 tracking-tight leading-none"
          >
            Tải Game Mới
          </h1>
          <p
            class="text-slate-500 text-xs font-bold mt-1.5 flex items-center gap-2"
          >
            Upload build để tạo bản Draft
            <span class="w-1 h-1 rounded-full bg-slate-300"></span>
            <span class="text-iruka-blue font-extrabold"
              >Quy trình: Chọn gói build → Hệ thống kiểm tra → Đăng bản build</span
            >
          </p>
        </div>
      </div>

      <!-- User Badge (Optional, kept minimal) -->
      <div
        class="hidden sm:flex items-center gap-3 bg-white px-3 py-1.5 rounded-full border border-slate-200 shadow-sm"
      >
        <div
          class="w-6 h-6 rounded-full bg-indigo-100 text-indigo-600 flex items-center justify-center text-xs font-bold"
        >
          {user.name?.charAt(0)}
        </div>
        <span class="text-xs font-bold text-slate-700">{user.email}</span>
      </div>
    </div>

    <!-- 2-Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
      <!-- Left Column: Action (65%) -->
      <div class="lg:col-span-8 flex flex-col gap-6">
        <GameUploadForm />
      </div>

      <!-- Right Column: Guidance (35%) -->
      <div class="lg:col-span-4 space-y-5 lg:sticky lg:top-6">
        <!-- Compact Stepper -->
        <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-5">
          <h3
            class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4"
          >
            Tiến trình xử lý
          </h3>
          <div class="space-y-4 relative">
            <div
              class="absolute left-3.5 top-2 bottom-2 w-0.5 bg-slate-100 z-0"
            >
            </div>

            <!-- Active Step -->
            <div class="relative z-10 flex items-center gap-3">
              <div
                class="w-7 h-7 rounded-full bg-iruka-blue text-white flex items-center justify-center shadow-md shadow-blue-500/20 border-2 border-white"
              >
                <span class="text-xs font-bold">1</span>
              </div>
              <div>
                <p class="text-xs font-black text-slate-900">Upload Build</p>
                <p class="text-[10px] text-iruka-blue font-bold">
                  Đang thực hiện (Dev)
                </p>
              </div>
            </div>

            <!-- Inactive Steps -->
            <div class="relative z-10 flex items-center gap-3 opacity-50">
              <div
                class="w-7 h-7 rounded-full bg-slate-50 border-2 border-slate-200 text-slate-400 flex items-center justify-center"
              >
                <span class="text-xs font-bold">2</span>
              </div>
              <p class="text-xs font-bold text-slate-500">Kiểm tra QC</p>
            </div>

            <div class="relative z-10 flex items-center gap-3 opacity-50">
              <div
                class="w-7 h-7 rounded-full bg-slate-50 border-2 border-slate-200 text-slate-400 flex items-center justify-center"
              >
                <span class="text-xs font-bold">3</span>
              </div>
              <p class="text-xs font-bold text-slate-500">Phê duyệt (CTO)</p>
            </div>

            <div class="relative z-10 flex items-center gap-3 opacity-50">
              <div
                class="w-7 h-7 rounded-full bg-slate-50 border-2 border-slate-200 text-slate-400 flex items-center justify-center"
              >
                <span class="text-xs font-bold">4</span>
              </div>
              <p class="text-xs font-bold text-slate-500">Phát hành</p>
            </div>
          </div>
        </div>

        <!-- Requirements Checklist (Collapsible feels) -->
        <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-5">
          <h3
            class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-3"
          >
            Yêu cầu bắt buộc
          </h3>
          <ul class="space-y-2.5">
            <li class="flex items-start gap-2 text-xs font-bold text-slate-600">
              <svg
                class="w-4 h-4 text-emerald-500 shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M5 13l4 4L19 7"></path></svg
              >
              <span
                >File <code
                  class="bg-slate-100 px-1 py-0.5 rounded text-slate-800"
                  >index.html</code
                > tại root</span
              >
            </li>
            <li class="flex items-start gap-2 text-xs font-bold text-slate-600">
              <svg
                class="w-4 h-4 text-emerald-500 shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M5 13l4 4L19 7"></path></svg
              >
              <span
                >File <code
                  class="bg-slate-100 px-1 py-0.5 rounded text-slate-800"
                  >manifest.json</code
                > đầy đủ</span
              >
            </li>
            <li class="flex items-start gap-2 text-xs font-bold text-slate-600">
              <svg
                class="w-4 h-4 text-emerald-500 shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M5 13l4 4L19 7"></path></svg
              >
              <span
                >Game ID: <code
                  class="bg-slate-100 px-1 py-0.5 rounded text-slate-800"
                  >com.iruka.[game-name]</code
                ></span
              >
            </li>
            <li class="flex items-start gap-2 text-xs font-bold text-slate-600">
              <svg
                class="w-4 h-4 text-amber-500 shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"
                ></path></svg
              >
              <span>Size &lt; 10MB (Khuyên dùng &lt; 3MB)</span>
            </li>
          </ul>
        </div>

        <!-- Dev Tips -->
        <div class="bg-indigo-50/50 rounded-2xl border border-indigo-100 p-5">
          <h3
            class="flex items-center gap-2 text-[10px] font-black text-indigo-500 uppercase tracking-widest mb-2"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
            >
            Mẹo cho Dev
          </h3>
          <p class="text-xs font-bold text-slate-600 mb-3">
            Sử dụng tool để validate trước tại local:
          </p>
          <code
            class="block bg-white border border-indigo-100 rounded-lg p-2.5 text-[10px] font-mono text-indigo-600 break-all select-all"
          >
            pnpm iruka-game:validate ./dist
          </code>
          <a
            href="#"
            class="mt-3 block text-center text-xs font-bold text-indigo-600 hover:text-indigo-700 hover:underline"
          >
            Tải mẫu manifest.json
          </a>
        </div>
      </div>
    </div>
  </div>

  <style is:inline>
    :root {
      --iruka-blue: #2b9bf6;
    }
  </style>
</Layout>
