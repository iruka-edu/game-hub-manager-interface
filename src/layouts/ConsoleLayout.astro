---
import type { User } from '../models/User';

interface Props {
  title: string;
  user: User;
  activeMenu?: string;
}

const { title, user, activeMenu = 'dashboard' } = Astro.props;

// Role checks
const hasRole = (role: string) => user?.roles?.includes(role as any) ?? false;
const isAdmin = hasRole('admin');
const isDev = hasRole('dev');
const isQC = hasRole('qc');
const isCTO = hasRole('cto');
const isCEO = hasRole('ceo');
const canApprove = isCTO || isCEO || isAdmin;
const canPublish = isAdmin;

// Role labels
const roleLabels: Record<string, string> = {
  dev: 'Developer',
  qc: 'QC Tester', 
  cto: 'CTO',
  ceo: 'CEO',
  admin: 'Administrator'
};
const userRoleDisplay = user?.roles?.map(r => roleLabels[r] || r).join(', ') || '';

// Menu items based on role
type MenuItem = { id: string; label: string; icon: string; href: string; badge?: number };
const menuItems: MenuItem[] = [
  { id: 'dashboard', label: 'Dashboard', icon: 'home', href: '/console' },
];

// Dev: My Games
if (isDev || isAdmin) {
  menuItems.push({ id: 'my-games', label: 'Game của tôi', icon: 'folder', href: '/console/my-games' });
}

// QC: Inbox
if (isQC || isAdmin) {
  menuItems.push({ id: 'qc-inbox', label: 'QC Inbox', icon: 'inbox', href: '/console/qc-inbox' });
}

// CTO/CEO: Approval
if (canApprove) {
  menuItems.push({ id: 'approval', label: 'Chờ duyệt', icon: 'check-circle', href: '/console/approval' });
}

// Admin: Publish
if (canPublish) {
  menuItems.push({ id: 'publish', label: 'Xuất bản', icon: 'globe', href: '/console/publish' });
}

// All: Game Library
menuItems.push({ id: 'library', label: 'Thư viện Game', icon: 'grid', href: '/console/library' });

// Admin/CTO: Audit Logs
if (isAdmin || isCTO) {
  menuItems.push({ id: 'audit-logs', label: 'Audit Logs', icon: 'clipboard-list', href: '/console/audit-logs' });
}

// Admin/CTO: User Management
if (isAdmin || isCTO) {
  menuItems.push({ id: 'users', label: 'Quản lý User', icon: 'users', href: '/console/users' });
}
---

<!doctype html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} - Game Console</title>
    <style is:global>
      @import "tailwindcss";
      
      :root {
        --color-primary: 79 70 229;
        --sidebar-width: 260px;
        --sidebar-collapsed-width: 80px;
      }
      
      body {
        font-family: "Inter", system-ui, sans-serif;
        -webkit-font-smoothing: antialiased;
      }
      
      .sidebar { 
        width: var(--sidebar-width);
        transition: width 0.3s ease;
      }
      .sidebar.collapsed { 
        width: var(--sidebar-collapsed-width);
      }
      .main-content { 
        margin-left: var(--sidebar-width);
        transition: margin-left 0.3s ease;
      }
      .main-content.sidebar-collapsed { 
        margin-left: var(--sidebar-collapsed-width);
      }
      
      /* Hide text when collapsed */
      .sidebar.collapsed .sidebar-text {
        opacity: 0;
        width: 0;
        overflow: hidden;
      }
      .sidebar-text {
        opacity: 1;
        transition: opacity 0.2s ease;
      }
      
      /* Center icons when collapsed */
      .sidebar.collapsed nav a {
        justify-content: center;
      }
      
      /* Button styles */
      .btn-primary {
        @apply inline-flex items-center justify-center gap-2 px-4 py-2 min-h-[40px] text-sm font-medium rounded-lg border border-transparent transition-colors cursor-pointer;
        @apply bg-indigo-600 text-white border-indigo-600 hover:bg-indigo-700 hover:border-indigo-700;
      }
      
      .btn-secondary {
        @apply inline-flex items-center justify-center gap-2 px-4 py-2 min-h-[40px] text-sm font-medium rounded-lg border transition-colors cursor-pointer;
        @apply bg-white text-slate-700 border-slate-200 hover:bg-slate-50;
      }
      
      .btn-danger {
        @apply inline-flex items-center justify-center gap-2 px-4 py-2 min-h-[40px] text-sm font-medium rounded-lg border border-transparent transition-colors cursor-pointer;
        @apply bg-red-600 text-white border-red-600 hover:bg-red-700 hover:border-red-700;
      }
      
      /* Card styles */
      .card {
        @apply bg-white border border-slate-200 rounded-xl shadow-sm p-6;
      }
      .status-qc_passed { @apply bg-purple-100 text-purple-700; }
      .status-qc_failed { @apply bg-red-100 text-red-700; }
      .status-approved { @apply bg-emerald-100 text-emerald-700; }
      .status-published { @apply bg-green-100 text-green-700; }
      .status-archived { @apply bg-gray-200 text-gray-600; }
      
      .btn-primary {
        @apply bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition-colors;
      }
      .btn-secondary {
        @apply bg-white border border-slate-300 hover:border-slate-400 text-slate-700 px-4 py-2 rounded-lg font-medium transition-colors;
      }
      .btn-danger {
        @apply bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors;
      }
      .btn-success {
        @apply bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg font-medium transition-colors;
      }
    </style>
  </head>
  <body class="bg-slate-50 text-slate-900 min-h-screen">
    <!-- Sidebar -->
    <aside id="sidebar" class="sidebar fixed left-0 top-0 h-full bg-slate-900 text-white z-40 flex flex-col">
      <!-- Logo & Toggle -->
      <div class="p-5 border-b border-slate-700 flex items-center justify-between">
        <a href="/console" class="flex items-center gap-3 min-w-0">
          <div class="w-9 h-9 rounded-lg bg-indigo-600 flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="sidebar-text font-bold text-lg whitespace-nowrap">Game Console</span>
        </a>
        <button 
          id="sidebar-toggle"
          class="p-1.5 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition-colors flex-shrink-0"
          title="Thu gọn sidebar"
        >
          <svg id="collapse-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
          </svg>
          <svg id="expand-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>
      
      <!-- Navigation -->
      <nav class="flex-1 py-4 overflow-y-auto">
        <ul class="space-y-1 px-3">
          {menuItems.map(item => (
            <li>
              <a 
                href={item.href}
                class={`flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors ${
                  activeMenu === item.id 
                    ? 'bg-indigo-600 text-white' 
                    : 'text-slate-300 hover:bg-slate-800 hover:text-white'
                }`}
              >
                {item.icon === 'home' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                )}
                {item.icon === 'folder' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                  </svg>
                )}
                {item.icon === 'inbox' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                  </svg>
                )}
                {item.icon === 'check-circle' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                )}
                {item.icon === 'globe' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                  </svg>
                )}
                {item.icon === 'grid' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                  </svg>
                )}
                {item.icon === 'clipboard-list' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                  </svg>
                )}
                {item.icon === 'users' && (
                  <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  </svg>
                )}
                <span class="sidebar-text font-medium whitespace-nowrap">{item.label}</span>
                {item.badge && item.badge > 0 && (
                  <span class="sidebar-text ml-auto bg-red-500 text-white text-xs px-2 py-0.5 rounded-full">{item.badge}</span>
                )}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      
      <!-- User Info -->
      <div class="p-4 border-t border-slate-700">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-indigo-600 flex items-center justify-center font-semibold">
            {user.name?.charAt(0) || user.email.charAt(0).toUpperCase()}
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-sm truncate">{user.name || user.email}</p>
            <p class="text-xs text-slate-400 truncate">{userRoleDisplay}</p>
          </div>
          <a href="/api/auth/logout" class="p-2 text-slate-400 hover:text-white rounded-lg hover:bg-slate-800" title="Đăng xuất">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </a>
        </div>
      </div>
    </aside>
    
    <!-- Main Content -->
    <main class="main-content min-h-screen">
      <!-- Top Bar with Notifications -->
      <div class="sticky top-0 z-30 bg-white border-b border-slate-200 px-8 py-3 flex items-center justify-end">
        <!-- Notification Bell -->
        <div class="relative" id="notification-wrapper">
          <button 
            id="notification-btn"
            class="relative p-2 text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-lg transition-colors"
            title="Thông báo"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
            <span id="notification-badge" class="hidden absolute -top-1 -right-1 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center font-medium">0</span>
          </button>
          
          <!-- Notification Dropdown -->
          <div id="notification-dropdown" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-xl shadow-lg border border-slate-200 overflow-hidden">
            <div class="p-3 border-b border-slate-200 flex items-center justify-between">
              <h3 class="font-semibold text-slate-900">Thông báo</h3>
              <button id="mark-all-read" class="text-xs text-indigo-600 hover:text-indigo-800">Đánh dấu đã đọc</button>
            </div>
            <div id="notification-list" class="max-h-96 overflow-y-auto">
              <div class="p-4 text-center text-slate-500 text-sm">Đang tải...</div>
            </div>
          </div>
        </div>
      </div>
      
      <slot />
    </main>
    
    <!-- Toast Container -->
    <div id="toast-container" class="fixed bottom-4 right-4 z-50 space-y-2"></div>
    
    <!-- Notification Script -->
    <script>
      const notificationBtn = document.getElementById('notification-btn');
      const notificationDropdown = document.getElementById('notification-dropdown');
      const notificationBadge = document.getElementById('notification-badge');
      const notificationList = document.getElementById('notification-list');
      const markAllReadBtn = document.getElementById('mark-all-read');
      
      let isDropdownOpen = false;
      
      // Toggle dropdown
      notificationBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        isDropdownOpen = !isDropdownOpen;
        notificationDropdown?.classList.toggle('hidden', !isDropdownOpen);
        if (isDropdownOpen) {
          loadNotifications();
        }
      });
      
      // Close on outside click
      document.addEventListener('click', (e) => {
        const wrapper = document.getElementById('notification-wrapper');
        if (!wrapper?.contains(e.target as Node)) {
          isDropdownOpen = false;
          notificationDropdown?.classList.add('hidden');
        }
      });
      
      // Load notifications
      async function loadNotifications() {
        try {
          const res = await fetch('/api/notifications');
          const data = await res.json();
          
          if (data.unreadCount > 0) {
            notificationBadge!.textContent = data.unreadCount > 9 ? '9+' : String(data.unreadCount);
            notificationBadge!.classList.remove('hidden');
          } else {
            notificationBadge!.classList.add('hidden');
          }
          
          if (data.notifications.length === 0) {
            notificationList!.innerHTML = '<div class="p-4 text-center text-slate-500 text-sm">Không có thông báo</div>';
            return;
          }
          
          notificationList!.innerHTML = data.notifications.map((n: any) => `
            <a href="${n.gameId ? '/console/games/' + n.gameId : '#'}" 
               class="block p-3 hover:bg-slate-50 border-b border-slate-100 ${n.isRead ? 'opacity-60' : ''}"
               data-notification-id="${n._id}">
              <div class="flex items-start gap-3">
                <div class="w-2 h-2 mt-2 rounded-full ${n.isRead ? 'bg-slate-300' : 'bg-indigo-500'}"></div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-slate-900 truncate">${n.title}</p>
                  <p class="text-xs text-slate-500 mt-0.5">${n.message}</p>
                  <p class="text-xs text-slate-400 mt-1">${new Date(n.createdAt).toLocaleString('vi-VN')}</p>
                </div>
              </div>
            </a>
          `).join('');
          
          // Mark as read on click
          notificationList!.querySelectorAll('a[data-notification-id]').forEach(link => {
            link.addEventListener('click', async () => {
              const id = link.getAttribute('data-notification-id');
              await fetch('/api/notifications', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ notificationId: id })
              });
            });
          });
        } catch (err) {
          notificationList!.innerHTML = '<div class="p-4 text-center text-red-500 text-sm">Lỗi tải thông báo</div>';
        }
      }
      
      // Mark all as read
      markAllReadBtn?.addEventListener('click', async () => {
        await fetch('/api/notifications', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ markAllRead: true })
        });
        loadNotifications();
      });
      
      // Initial load for badge
      loadNotifications();
    </script>
  </body>
</html>
