---
import { getUserFromRequest } from "../lib/session";
import type { User } from "../models/User";

interface Props {
  title: string;
}

const { title } = Astro.props;

// Get user for header
let user: any = null;
try {
  user = await getUserFromRequest(Astro.request);
} catch (e) {
  console.error("Error fetching user in layout:", e);
}

// Role checks
const hasRole = (role: string) => user?.roles?.includes(role as any) ?? false;
const isAdmin = hasRole("admin");
const isDev = hasRole("dev");
const canUpload = isDev || isAdmin;

// Role labels
const roleLabels: Record<string, string> = {
  dev: "Developer",
  qc: "QC Tester",
  cto: "CTO",
  ceo: "CEO",
  admin: "Administrator",
};
const userRoleDisplay =
  user?.roles?.map((r: string) => roleLabels[r] || r).join(", ") || "";
---

<!doctype html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Iruka Game Hub Manager - Quản lý mini-games trên Google Cloud Storage"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style is:global>
      @import "tailwindcss";

      :root {
        --color-primary: 79 70 229;
        --color-primary-hover: 67 56 202;
      }

      body {
        font-family: "Inter", system-ui, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
      }

      .animate-fade-in {
        animation: fadeIn 0.3s ease-out forwards;
      }

      .animate-pulse {
        animation: pulse 2s ease-in-out infinite;
      }

      .btn-primary {
        background-color: rgb(var(--color-primary));
        transition: all 0.2s ease;
      }

      .btn-primary:hover {
        background-color: rgb(var(--color-primary-hover));
        transform: translateY(-1px);
        box-shadow: 0 4px 12px -2px rgba(79, 70, 229, 0.3);
      }

      .card {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
      }

      .card:hover {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="bg-slate-50 text-slate-900 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white border-b border-slate-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center gap-3 group">
            <div
              class="w-10 h-10 rounded-lg bg-indigo-600 flex items-center justify-center shadow-sm"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <span class="text-xl font-bold text-slate-900"
              >Game Hub Manager</span
            >
          </a>

          <div class="flex items-center gap-6">
            {user ? (
              <>
                {canUpload && (
                  <a
                    href="/upload"
                    class="btn-primary flex items-center gap-2 px-4 py-2 rounded-lg text-white font-medium text-sm shadow-sm"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Tạo Game Mới
                  </a>
                )}
                
                <!-- User Profile Dropdown -->
                <div class="relative group">
                  <button class="flex items-center gap-3 p-1 rounded-full hover:bg-slate-100 transition-colors">
                    <div class="w-9 h-9 rounded-full bg-indigo-600 flex items-center justify-center text-white font-semibold text-sm">
                      {user.avatar ? <img src={user.avatar} alt={user.name} class="w-full h-full rounded-full" /> : (user.name?.charAt(0) || user.email.charAt(0).toUpperCase())}
                    </div>
                    <div class="hidden md:block text-left mr-1">
                      <p class="text-sm font-semibold text-slate-900 leading-tight">{user.name || user.email.split('@')[0]}</p>
                      <p class="text-[10px] text-slate-500 font-medium uppercase tracking-wider">{userRoleDisplay}</p>
                    </div>
                    <svg class="w-4 h-4 text-slate-400 group-hover:text-slate-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </button>

                  <!-- Dropdown Menu -->
                  <div class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-xl border border-slate-200 py-2 invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-all transform scale-95 group-hover:scale-100 z-50">
                    <div class="px-4 py-3 border-b border-slate-100 mb-1">
                      <p class="text-sm font-semibold text-slate-900 truncate">{user.name || user.email}</p>
                      <p class="text-xs text-slate-500 truncate">{user.email}</p>
                    </div>
                    
                    <a href="/console" class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-50 hover:text-indigo-600 transition-colors">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                      </svg>
                      Bảng điều khiển
                    </a>
                    
                    <a href="/console/library" class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-50 hover:text-indigo-600 transition-colors">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                      </svg>
                      Thư viện Game
                    </a>

                    <div class="h-px bg-slate-100 my-1"></div>
                    
                    <a href="/api/auth/logout" class="flex items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 transition-colors">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                      </svg>
                      Đăng xuất
                    </a>
                  </div>
                </div>
              </>
            ) : (
              <a
                href="/login"
                class="flex items-center gap-2 px-6 py-2.5 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white transition-colors text-sm font-semibold shadow-sm"
              >
                Đăng nhập
              </a>
            )}
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-6 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-200 mt-16 bg-white">
      <div class="max-w-7xl mx-auto px-6 py-8">
        <p class="text-center text-slate-500 text-sm">
          Game Hub Manager • Được hỗ trợ bởi Astro & Google Cloud Storage
        </p>
      </div>
    </footer>
  </body>
</html>
