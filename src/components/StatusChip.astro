---
interface Props {
  status: string;
  size?: 'sm' | 'md';
  showIcon?: boolean;
}

const { status, size = 'md', showIcon = false } = Astro.props;

const statusConfig: Record<string, { label: string; class: string; icon?: string }> = {
  // Version statuses with standard Tailwind classes
  draft: { label: 'Nháp', class: 'bg-slate-100 text-slate-700 border-slate-200' },
  uploaded: { label: 'Chờ QC', class: 'bg-blue-100 text-blue-800 border-blue-200' },
  qc_processing: { label: 'Đang QC', class: 'bg-yellow-100 text-yellow-800 border-yellow-200' },
  qc_passed: { label: 'QC đạt', class: 'bg-purple-100 text-purple-800 border-purple-200' },
  qc_failed: { label: 'QC cần sửa', class: 'bg-red-100 text-red-800 border-red-200' },
  approved: { label: 'Đã duyệt', class: 'bg-emerald-100 text-emerald-800 border-emerald-200' },
  published: { label: 'Đã xuất bản', class: 'bg-green-100 text-green-800 border-green-200' },
  archived: { label: 'Đã lưu trữ', class: 'bg-gray-100 text-gray-700 border-gray-200' },
};

const config = statusConfig[status] || { 
  label: status, 
  class: 'bg-gray-100 text-gray-700 border-gray-200' 
};

const sizeClass = size === 'sm' ? 'text-sm px-2 py-1' : 'text-sm px-3 py-2';
---

<span class={`inline-flex items-center rounded-full font-medium border ${config.class} ${sizeClass}`}>
  {config.label}
</span>
