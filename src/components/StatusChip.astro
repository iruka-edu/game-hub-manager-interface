---
interface Props {
  status: string;
  size?: 'sm' | 'md';
}

const { status, size = 'md' } = Astro.props;

const statusConfig: Record<string, { label: string; class: string }> = {
  draft: { label: 'Nháp', class: 'bg-slate-100 text-slate-700' },
  uploaded: { label: 'Chờ QC', class: 'bg-blue-100 text-blue-700' },
  qc_passed: { label: 'QC đạt', class: 'bg-purple-100 text-purple-700' },
  qc_failed: { label: 'QC cần sửa', class: 'bg-red-100 text-red-700' },
  approved: { label: 'Đã duyệt', class: 'bg-emerald-100 text-emerald-700' },
  published: { label: 'Đã xuất bản', class: 'bg-green-100 text-green-700' },
  archived: { label: 'Đã lưu trữ', class: 'bg-gray-200 text-gray-600' },
};

const config = statusConfig[status] || { label: status, class: 'bg-gray-100 text-gray-700' };
const sizeClass = size === 'sm' ? 'text-xs px-2 py-0.5' : 'text-sm px-3 py-1';
---

<span class={`inline-flex items-center rounded-full font-medium ${config.class} ${sizeClass}`}>
  {config.label}
</span>
