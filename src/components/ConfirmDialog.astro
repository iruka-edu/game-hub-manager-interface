---
interface Props {
  id: string;
  title: string;
  message: string;
  confirmText?: string;
  cancelText?: string;
  variant?: 'danger' | 'warning' | 'info';
  showProductionWarning?: boolean;
}

const { 
  id, 
  title, 
  message, 
  confirmText = 'Xác nhận', 
  cancelText = 'Hủy',
  variant = 'info',
  showProductionWarning = false
} = Astro.props;

const variantStyles = {
  danger: {
    icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
    iconColor: 'text-red-600',
    iconBg: 'bg-red-100',
    confirmButton: 'bg-red-600 hover:bg-red-700 text-white'
  },
  warning: {
    icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
    iconColor: 'text-amber-600',
    iconBg: 'bg-amber-100',
    confirmButton: 'bg-amber-600 hover:bg-amber-700 text-white'
  },
  info: {
    icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    iconColor: 'text-blue-600',
    iconBg: 'bg-blue-100',
    confirmButton: 'bg-blue-600 hover:bg-blue-700 text-white'
  }
};

const style = variantStyles[variant];
---

<div 
  id={id}
  class="fixed inset-0 bg-black/50 z-50 hidden items-center justify-center p-4"
  role="dialog"
  aria-modal="true"
  aria-labelledby={`${id}-title`}
  aria-describedby={`${id}-message`}
>
  <div class="bg-white rounded-xl max-w-md w-full shadow-2xl transform transition-all">
    <!-- Header -->
    <div class="p-6 pb-4">
      <div class="flex items-start gap-4">
        <div class={`w-12 h-12 rounded-full ${style.iconBg} flex items-center justify-center shrink-0`}>
          <svg class={`w-6 h-6 ${style.iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={style.icon}></path>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <h3 id={`${id}-title`} class="text-lg font-semibold text-slate-900 mb-2">
            {title}
          </h3>
          <p id={`${id}-message`} class="text-slate-600 leading-relaxed">
            {message}
          </p>
        </div>
      </div>
    </div>

    <!-- Production Warning -->
    {showProductionWarning && (
      <div class="mx-6 mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
        <div class="flex items-center gap-2 mb-2">
          <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <span class="text-sm font-semibold text-red-800">Cảnh báo Production</span>
        </div>
        <p class="text-sm text-red-700">
          Hành động này sẽ ảnh hưởng đến môi trường Production và có thể tác động đến người dùng cuối.
        </p>
      </div>
    )}

    <!-- Actions -->
    <div class="px-6 pb-6">
      <div class="flex gap-3 justify-end">
        <button 
          type="button"
          class="cancel-btn px-4 py-2.5 text-sm font-medium text-slate-700 bg-white border border-slate-200 rounded-lg hover:bg-slate-50 transition-colors min-h-[40px]"
        >
          {cancelText}
        </button>
        <button 
          type="button"
          class={`confirm-btn px-4 py-2.5 text-sm font-medium rounded-lg transition-colors min-h-[40px] ${style.confirmButton}`}
        >
          {confirmText}
        </button>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ id }}>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById(id);
    if (!modal) return;
    
    const cancelBtn = modal.querySelector('.cancel-btn');
    const confirmBtn = modal.querySelector('.confirm-btn');
    
    // Close modal function
    function closeModal() {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = '';
    }
    
    // Cancel button
    if (cancelBtn) {
      cancelBtn.addEventListener('click', closeModal);
    }
    
    // Close on backdrop click
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        closeModal();
      }
    });
    
    // Close on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });
    
    // Expose functions globally for external use
    window[`show${id.charAt(0).toUpperCase() + id.slice(1)}`] = function(options = {}) {
      // Update content if provided
      if (options.title) {
        const titleEl = modal.querySelector(`#${id}-title`);
        if (titleEl) titleEl.textContent = options.title;
      }
      
      if (options.message) {
        const messageEl = modal.querySelector(`#${id}-message`);
        if (messageEl) messageEl.textContent = options.message;
      }
      
      // Show modal
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
      
      // Return promise for confirmation
      return new Promise((resolve) => {
        const handleConfirm = () => {
          closeModal();
          confirmBtn.removeEventListener('click', handleConfirm);
          resolve(true);
        };
        
        const handleCancel = () => {
          closeModal();
          cancelBtn.removeEventListener('click', handleCancel);
          resolve(false);
        };
        
        confirmBtn.addEventListener('click', handleConfirm);
        cancelBtn.addEventListener('click', handleCancel);
      });
    };
    
    window[`hide${id.charAt(0).toUpperCase() + id.slice(1)}`] = closeModal;
  });
</script>