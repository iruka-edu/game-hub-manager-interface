---
interface Props {
  title: string;
  description: string;
  icon?: 'games' | 'upload' | 'search' | 'inbox' | 'approval';
  actionText?: string;
  actionHref?: string;
  secondaryActionText?: string;
  secondaryActionHref?: string;
}

const { 
  title, 
  description, 
  icon = 'games', 
  actionText, 
  actionHref,
  secondaryActionText,
  secondaryActionHref 
} = Astro.props;

const iconSvg = {
  games: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>`,
  upload: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>`,
  search: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>`,
  inbox: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>`,
  approval: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>`
};
---

<div class="text-center py-16 px-6">
  <div class="w-20 h-20 bg-slate-100 rounded-full mx-auto mb-6 flex items-center justify-center">
    <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <Fragment set:html={iconSvg[icon]} />
    </svg>
  </div>
  
  <h3 class="text-xl font-semibold text-slate-900 mb-3">{title}</h3>
  <p class="text-slate-500 mb-8 max-w-md mx-auto leading-relaxed">{description}</p>
  
  <div class="flex flex-col sm:flex-row gap-3 justify-center">
    {actionText && actionHref && (
      <a 
        href={actionHref} 
        class="inline-flex items-center justify-center px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors min-h-[44px]"
      >
        {actionText}
      </a>
    )}
    
    {secondaryActionText && secondaryActionHref && (
      <a 
        href={secondaryActionHref} 
        class="inline-flex items-center justify-center px-6 py-3 bg-white text-slate-700 font-medium rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors min-h-[44px]"
      >
        {secondaryActionText}
      </a>
    )}
  </div>
</div>