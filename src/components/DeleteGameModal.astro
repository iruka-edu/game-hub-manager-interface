---
interface Props {
  gameId: string;
  gameTitle: string;
  userRoles: string[];
}

const { gameId, gameTitle, userRoles } = Astro.props;
const isAdmin = userRoles.includes('admin');
const isCEO = userRoles.includes('ceo');
const isCTO = userRoles.includes('cto');
const canDeleteAnyGame = isAdmin || isCEO || isCTO;
---

<div id={`delete-modal-${gameId}`} class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class="bg-white rounded-xl p-6 max-w-md w-full mx-4">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-gray-900">Xóa Game</h3>
        <p class="text-sm text-gray-600">Hành động này không thể hoàn tác</p>
      </div>
    </div>

    <div class="mb-4">
      <p class="text-gray-700 mb-2">
        Bạn có chắc chắn muốn xóa game <strong>{gameTitle}</strong>?
      </p>
      <p class="text-sm text-red-600">
        ⚠️ Tất cả dữ liệu và phiên bản của game sẽ bị xóa vĩnh viễn.
      </p>
    </div>

    <div class="mb-4">
      <label for={`delete-reason-${gameId}`} class="block text-sm font-medium text-gray-700 mb-2">
        Lý do xóa {canDeleteAnyGame ? '(tùy chọn)' : '(bắt buộc)'}
      </label>
      <textarea
        id={`delete-reason-${gameId}`}
        rows="3"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
        placeholder="Nhập lý do xóa game..."
        required={!canDeleteAnyGame}
      ></textarea>
    </div>

    <div class="flex gap-3">
      <button
        type="button"
        onclick={`closeDeleteModal('${gameId}')`}
        class="flex-1 px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition-colors"
      >
        Hủy
      </button>
      <button
        type="button"
        onclick={`confirmDeleteGame('${gameId}')`}
        class="flex-1 px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition-colors"
      >
        Xóa Game
      </button>
    </div>
  </div>
</div>

<script define:vars={{ gameId, canDeleteAnyGame }}>
  window.openDeleteModal = function(gameId) {
    const modal = document.getElementById(`delete-modal-${gameId}`);
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }
  };

  window.closeDeleteModal = function(gameId) {
    const modal = document.getElementById(`delete-modal-${gameId}`);
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      // Clear reason textarea
      const textarea = document.getElementById(`delete-reason-${gameId}`);
      if (textarea) textarea.value = '';
    }
  };

  window.confirmDeleteGame = async function(gameId) {
    const reasonTextarea = document.getElementById(`delete-reason-${gameId}`);
    const reason = reasonTextarea ? reasonTextarea.value.trim() : '';
    
    // Validate reason for non-admin users
    if (!canDeleteAnyGame && !reason) {
      alert('Vui lòng nhập lý do xóa game');
      return;
    }

    // Show loading state
    const deleteButton = event.target;
    const originalText = deleteButton.textContent;
    deleteButton.textContent = 'Đang xóa...';
    deleteButton.disabled = true;

    try {
      const response = await fetch(`/api/games/${gameId}/delete`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ reason })
      });

      const result = await response.json();

      if (response.ok) {
        // Show success message
        alert('Game đã được xóa thành công');
        
        // Close modal
        closeDeleteModal(gameId);
        
        // Reload page to update game list
        window.location.reload();
      } else {
        throw new Error(result.error || 'Có lỗi xảy ra khi xóa game');
      }
    } catch (error) {
      console.error('Delete game error:', error);
      alert('Lỗi: ' + error.message);
    } finally {
      // Restore button state
      deleteButton.textContent = originalText;
      deleteButton.disabled = false;
    }
  };

  // Close modal when clicking outside
  document.addEventListener('click', function(event) {
    if (event.target.id === `delete-modal-${gameId}`) {
      closeDeleteModal(gameId);
    }
  });
</script>