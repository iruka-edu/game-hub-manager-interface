---
interface Props {
  type?: 'card' | 'table' | 'list';
  count?: number;
}

const { type = 'card', count = 3 } = Astro.props;
---

{type === 'card' && (
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {Array.from({ length: count }).map(() => (
      <div class="bg-white rounded-2xl border border-slate-200 p-4 animate-pulse">
        <div class="flex items-start justify-between gap-3 mb-2">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-slate-200"></div>
            <div class="space-y-2">
              <div class="h-4 bg-slate-200 rounded w-24"></div>
              <div class="h-3 bg-slate-200 rounded w-16"></div>
            </div>
          </div>
          <div class="w-6 h-6 bg-slate-200 rounded"></div>
        </div>
        <div class="h-3 bg-slate-200 rounded w-full mb-3"></div>
        <div class="flex gap-2 mb-3">
          <div class="h-6 bg-slate-200 rounded w-16"></div>
          <div class="h-6 bg-slate-200 rounded w-12"></div>
        </div>
        <div class="flex gap-2">
          <div class="h-8 bg-slate-200 rounded w-20"></div>
          <div class="h-8 bg-slate-200 rounded w-16"></div>
        </div>
      </div>
    ))}
  </div>
)}

{type === 'table' && (
  <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
    <table class="w-full">
      <thead class="bg-slate-50 border-b border-slate-200">
        <tr>
          <th class="text-left px-6 py-4">
            <div class="h-4 bg-slate-200 rounded w-16 animate-pulse"></div>
          </th>
          <th class="text-left px-6 py-4">
            <div class="h-4 bg-slate-200 rounded w-20 animate-pulse"></div>
          </th>
          <th class="text-left px-6 py-4">
            <div class="h-4 bg-slate-200 rounded w-12 animate-pulse"></div>
          </th>
          <th class="text-right px-6 py-4">
            <div class="h-4 bg-slate-200 rounded w-16 ml-auto animate-pulse"></div>
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-50">
        {Array.from({ length: count }).map(() => (
          <tr class="animate-pulse">
            <td class="px-6 py-4">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-slate-200 rounded"></div>
                <div class="space-y-1">
                  <div class="h-4 bg-slate-200 rounded w-32"></div>
                  <div class="h-3 bg-slate-200 rounded w-24"></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="h-6 bg-slate-200 rounded w-16"></div>
            </td>
            <td class="px-6 py-4">
              <div class="h-4 bg-slate-200 rounded w-20"></div>
            </td>
            <td class="px-6 py-4 text-right">
              <div class="flex gap-2 justify-end">
                <div class="h-8 bg-slate-200 rounded w-16"></div>
                <div class="h-8 bg-slate-200 rounded w-20"></div>
              </div>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
)}

{type === 'list' && (
  <div class="space-y-4">
    {Array.from({ length: count }).map(() => (
      <div class="bg-white rounded-xl border border-slate-200 p-4 animate-pulse">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-slate-200 rounded-full"></div>
            <div class="space-y-2">
              <div class="h-4 bg-slate-200 rounded w-32"></div>
              <div class="h-3 bg-slate-200 rounded w-24"></div>
            </div>
          </div>
          <div class="flex gap-2">
            <div class="h-8 bg-slate-200 rounded w-16"></div>
            <div class="h-8 bg-slate-200 rounded w-6"></div>
          </div>
        </div>
      </div>
    ))}
  </div>
)}