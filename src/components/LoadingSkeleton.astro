---
export interface Props {
  type?: 'card' | 'table' | 'stats' | 'list';
  count?: number;
  className?: string;
}

const { type = 'card', count = 1, className = '' } = Astro.props;
---

{type === 'stats' && (
  <div class={`grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 ${className}`}>
    {Array.from({ length: 4 }).map(() => (
      <div class="bg-white rounded-xl p-6 border border-slate-200 animate-pulse">
        <div class="flex items-center justify-between">
          <div>
            <div class="h-4 bg-slate-200 rounded w-20 mb-2"></div>
            <div class="h-8 bg-slate-200 rounded w-12"></div>
          </div>
          <div class="w-12 h-12 bg-slate-200 rounded-lg"></div>
        </div>
      </div>
    ))}
  </div>
)}

{type === 'card' && (
  <div class={`space-y-4 ${className}`}>
    {Array.from({ length: count }).map(() => (
      <div class="bg-white rounded-xl border border-slate-200 animate-pulse">
        <div class="p-5 border-b border-slate-200">
          <div class="h-6 bg-slate-200 rounded w-32"></div>
        </div>
        <div class="p-5 space-y-3">
          <div class="h-4 bg-slate-200 rounded w-full"></div>
          <div class="h-4 bg-slate-200 rounded w-3/4"></div>
          <div class="h-4 bg-slate-200 rounded w-1/2"></div>
        </div>
      </div>
    ))}
  </div>
)}

{type === 'table' && (
  <div class={`bg-white rounded-xl border border-slate-200 overflow-hidden animate-pulse ${className}`}>
    <div class="p-5 border-b border-slate-200">
      <div class="h-6 bg-slate-200 rounded w-40"></div>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-slate-50 border-b border-slate-200">
          <tr>
            {Array.from({ length: 5 }).map(() => (
              <th class="px-5 py-3">
                <div class="h-4 bg-slate-200 rounded w-20"></div>
              </th>
            ))}
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          {Array.from({ length: count }).map(() => (
            <tr>
              {Array.from({ length: 5 }).map(() => (
                <td class="px-5 py-4">
                  <div class="h-4 bg-slate-200 rounded w-24"></div>
                </td>
              ))}
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
)}

{type === 'list' && (
  <div class={`bg-white rounded-xl border border-slate-200 animate-pulse ${className}`}>
    <div class="p-5 border-b border-slate-200">
      <div class="h-6 bg-slate-200 rounded w-32"></div>
    </div>
    <div class="divide-y divide-slate-100">
      {Array.from({ length: count }).map(() => (
        <div class="flex items-center justify-between p-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-slate-200 rounded-lg"></div>
            <div>
              <div class="h-4 bg-slate-200 rounded w-32 mb-1"></div>
              <div class="h-3 bg-slate-200 rounded w-20"></div>
            </div>
          </div>
          <div class="h-6 bg-slate-200 rounded w-16"></div>
        </div>
      ))}
    </div>
  </div>
)}

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>