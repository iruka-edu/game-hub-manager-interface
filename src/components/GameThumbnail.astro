---
interface Props {
  game: {
    _id: any;
    gameId: string;
    title?: string;
    thumbnailDesktop?: string;
    thumbnailMobile?: string;
  };
  size?: 'sm' | 'md' | 'lg';
  showPlayButton?: boolean;
  onClick?: string;
}

const { game, size = 'md', showPlayButton = false, onClick } = Astro.props;

const sizeClasses = {
  sm: 'aspect-video w-32',
  md: 'aspect-video w-full',
  lg: 'aspect-video w-full h-64'
};

const thumbnail = game.thumbnailDesktop || game.thumbnailMobile;
---

<div class={`${sizeClasses[size]} bg-slate-100 rounded-lg overflow-hidden relative group ${onClick ? 'cursor-pointer' : ''}`} onclick={onClick}>
  {thumbnail ? (
    <img 
      src={thumbnail} 
      alt={`${game.title || game.gameId} thumbnail`}
      class="w-full h-full object-cover"
      onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"
    />
  ) : null}
  
  <!-- Fallback placeholder -->
  <div class={`w-full h-full flex items-center justify-center ${thumbnail ? 'hidden' : ''}`}>
    <div class="text-center">
      <div class="w-12 h-12 mx-auto mb-2 rounded-xl bg-slate-200 flex items-center justify-center">
        <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <p class="text-slate-500 text-xs">No thumbnail</p>
    </div>
  </div>

  <!-- Play button overlay -->
  {showPlayButton && (
    <div class="absolute inset-0 bg-black/20 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
      <div class="w-12 h-12 bg-white/90 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-slate-700 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
        </svg>
      </div>
    </div>
  )}
</div>