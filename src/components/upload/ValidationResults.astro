---
/**
 * Validation Results Component - Shows file validation results
 */
export interface Props {
  id?: string;
  className?: string;
}

const { 
  id = 'validationResults',
  className = ''
} = Astro.props;
---

<div 
  id={id}
  class={`validation-results ${className} hidden`}
>
  <!-- Success State -->
  <div class="validation-success hidden">
    <div class="validation-card validation-card--success">
      <div class="validation-header">
        <div class="validation-icon validation-icon--success">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <div>
          <h4 class="validation-title">File hợp lệ</h4>
          <p class="validation-subtitle">Tất cả kiểm tra đã thành công</p>
        </div>
      </div>
      
      <div class="validation-details">
        <div class="file-info">
          <span class="file-info__label">Files found:</span>
          <span class="file-info__value" id="fileCount">-</span>
        </div>
        <div class="file-list" id="fileList"></div>
      </div>
    </div>
  </div>

  <!-- Error State -->
  <div class="validation-error hidden">
    <div class="validation-card validation-card--error">
      <div class="validation-header">
        <div class="validation-icon validation-icon--error">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </div>
        <div>
          <h4 class="validation-title">File không hợp lệ</h4>
          <p class="validation-subtitle">Vui lòng sửa các lỗi sau</p>
        </div>
      </div>
      
      <div class="validation-details">
        <div class="error-list" id="errorList"></div>
      </div>
    </div>
  </div>

  <!-- Warning State -->
  <div class="validation-warning hidden">
    <div class="validation-card validation-card--warning">
      <div class="validation-header">
        <div class="validation-icon validation-icon--warning">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"/>
          </svg>
        </div>
        <div>
          <h4 class="validation-title">File hợp lệ với cảnh báo</h4>
          <p class="validation-subtitle">Có một số vấn đề cần lưu ý</p>
        </div>
      </div>
      
      <div class="validation-details">
        <div class="warning-list" id="warningList"></div>
        <div class="file-info">
          <span class="file-info__label">Files found:</span>
          <span class="file-info__value" id="fileCountWarning">-</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Loading State -->
  <div class="validation-loading">
    <div class="validation-card">
      <div class="validation-header">
        <div class="validation-icon">
          <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
        <div>
          <h4 class="validation-title">Đang kiểm tra file...</h4>
          <p class="validation-subtitle">Vui lòng đợi trong giây lát</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .validation-results {
    @apply mt-4;
  }

  .validation-card {
    @apply border rounded-lg p-4 space-y-4;
  }

  .validation-card--success {
    @apply border-green-200 bg-green-50;
  }

  .validation-card--error {
    @apply border-red-200 bg-red-50;
  }

  .validation-card--warning {
    @apply border-yellow-200 bg-yellow-50;
  }

  .validation-header {
    @apply flex items-start space-x-3;
  }

  .validation-icon {
    @apply w-8 h-8 rounded-full flex items-center justify-center;
  }

  .validation-icon--success {
    @apply bg-green-100 text-green-600;
  }

  .validation-icon--error {
    @apply bg-red-100 text-red-600;
  }

  .validation-icon--warning {
    @apply bg-yellow-100 text-yellow-600;
  }

  .validation-title {
    @apply font-medium text-sm;
  }

  .validation-card--success .validation-title {
    @apply text-green-800;
  }

  .validation-card--error .validation-title {
    @apply text-red-800;
  }

  .validation-card--warning .validation-title {
    @apply text-yellow-800;
  }

  .validation-subtitle {
    @apply text-xs mt-1;
  }

  .validation-card--success .validation-subtitle {
    @apply text-green-600;
  }

  .validation-card--error .validation-subtitle {
    @apply text-red-600;
  }

  .validation-card--warning .validation-subtitle {
    @apply text-yellow-600;
  }

  .validation-details {
    @apply space-y-3;
  }

  .file-info {
    @apply flex justify-between text-sm;
  }

  .file-info__label {
    @apply font-medium text-slate-600;
  }

  .file-info__value {
    @apply text-slate-800;
  }

  .file-list {
    @apply text-xs text-slate-600 space-y-1;
  }

  .error-list,
  .warning-list {
    @apply space-y-2;
  }

  .error-item,
  .warning-item {
    @apply flex items-start space-x-2 text-sm;
  }

  .error-item {
    @apply text-red-700;
  }

  .warning-item {
    @apply text-yellow-700;
  }

  .error-bullet,
  .warning-bullet {
    @apply w-1 h-1 rounded-full mt-2 flex-shrink-0;
  }

  .error-bullet {
    @apply bg-red-500;
  }

  .warning-bullet {
    @apply bg-yellow-500;
  }
</style>

<script>
  interface ValidationResult {
    valid: boolean;
    errors: string[];
    warnings: string[];
    files?: string[];
    manifestData?: any;
  }

  class ValidationResults {
    private element: HTMLElement;
    private successDiv: HTMLElement;
    private errorDiv: HTMLElement;
    private warningDiv: HTMLElement;
    private loadingDiv: HTMLElement;

    constructor(element: HTMLElement) {
      this.element = element;
      this.successDiv = element.querySelector('.validation-success')!;
      this.errorDiv = element.querySelector('.validation-error')!;
      this.warningDiv = element.querySelector('.validation-warning')!;
      this.loadingDiv = element.querySelector('.validation-loading')!;
    }

    public showLoading(): void {
      this.hideAll();
      this.loadingDiv.classList.remove('hidden');
      this.element.classList.remove('hidden');
    }

    public showResults(result: ValidationResult): void {
      this.hideAll();

      if (!result.valid) {
        this.showErrors(result.errors);
      } else if (result.warnings && result.warnings.length > 0) {
        this.showWarnings(result.warnings, result.files || []);
      } else {
        this.showSuccess(result.files || []);
      }

      this.element.classList.remove('hidden');
    }

    private showSuccess(files: string[]): void {
      this.successDiv.classList.remove('hidden');
      
      const fileCount = this.successDiv.querySelector('#fileCount')!;
      const fileList = this.successDiv.querySelector('#fileList')!;
      
      fileCount.textContent = files.length.toString();
      
      if (files.length > 0) {
        fileList.innerHTML = files
          .slice(0, 10) // Show max 10 files
          .map(file => `<div class="text-xs text-slate-500">• ${file}</div>`)
          .join('');
        
        if (files.length > 10) {
          fileList.innerHTML += `<div class="text-xs text-slate-400">... và ${files.length - 10} files khác</div>`;
        }
      }
    }

    private showErrors(errors: string[]): void {
      this.errorDiv.classList.remove('hidden');
      
      const errorList = this.errorDiv.querySelector('#errorList')!;
      errorList.innerHTML = errors
        .map(error => `
          <div class="error-item">
            <div class="error-bullet"></div>
            <span>${error}</span>
          </div>
        `)
        .join('');
    }

    private showWarnings(warnings: string[], files: string[]): void {
      this.warningDiv.classList.remove('hidden');
      
      const warningList = this.warningDiv.querySelector('#warningList')!;
      const fileCount = this.warningDiv.querySelector('#fileCountWarning')!;
      
      warningList.innerHTML = warnings
        .map(warning => `
          <div class="warning-item">
            <div class="warning-bullet"></div>
            <span>${warning}</span>
          </div>
        `)
        .join('');
      
      fileCount.textContent = files.length.toString();
    }

    private hideAll(): void {
      this.successDiv.classList.add('hidden');
      this.errorDiv.classList.add('hidden');
      this.warningDiv.classList.add('hidden');
      this.loadingDiv.classList.add('hidden');
    }

    public hide(): void {
      this.element.classList.add('hidden');
      this.hideAll();
    }
  }

  // Initialize validation results
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.validation-results').forEach(element => {
      new ValidationResults(element as HTMLElement);
    });
  });

  // Export for external use
  (window as any).ValidationResults = ValidationResults;
</script>