---
import type { GameEntry, VersionInfo } from "../lib/registry";

interface Props {
  game: GameEntry;
  versions: VersionInfo[];
}

const { game, versions } = Astro.props;
const CDN_BASE = `https://storage.googleapis.com/${import.meta.env.GCLOUD_BUCKET_NAME || "iruka-edu-mini-game"}`;

// Helper to format date
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  const now = new Date();
  const diffMs = now.getTime() - date.getTime();
  const diffMins = Math.floor(diffMs / 60000);
  const diffHours = Math.floor(diffMs / 3600000);
  const diffDays = Math.floor(diffMs / 86400000);

  if (diffMins < 1) return "Vừa xong";
  if (diffMins < 60) return `${diffMins} phút trước`;
  if (diffHours < 24) return `${diffHours} giờ trước`;
  if (diffDays < 7) return `${diffDays} ngày trước`;

  return date.toLocaleDateString("vi-VN");
}
---

<div class="version-history">
  <div class="flex items-center justify-between mb-4">
    <h4 class="text-sm font-semibold text-slate-700 flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Lịch sử phiên bản ({versions.length})
    </h4>
    
    <!-- Version Actions -->
    <div class="flex items-center gap-2">
      <button
        class="toggle-versions-btn text-xs text-slate-500 hover:text-slate-700 px-2 py-1 rounded hover:bg-slate-200 transition-colors font-medium"
        data-game-id={game.id}
      >
        <span class="toggle-text">Thu gọn</span>
        <svg class="w-3 h-3 inline ml-1 toggle-icon transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
    </div>
  </div>

  <div class="versions-list space-y-2 max-h-64 overflow-y-auto">
    {versions
      .slice()
      .reverse()
      .map((versionInfo) => {
        const isActive = versionInfo.version === game.activeVersion;
        return (
          <div
            class="version-item flex items-center justify-between py-3 px-4 rounded-lg bg-slate-50 hover:bg-slate-200 transition-colors group"
            data-version={versionInfo.version}
          >
            <!-- Version Info -->
            <div class="flex items-center gap-3 flex-1 min-w-0">
              <div class={`w-2 h-2 rounded-full shrink-0 ${isActive ? "bg-green-500" : "bg-slate-300"}`}></div>
              <div class="min-w-0 flex-1">
                <div class="flex items-center gap-2">
                  <span class="font-mono text-sm text-slate-900 font-medium">
                    v{versionInfo.version}
                  </span>
                  {isActive && (
                    <span class="px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-700 border border-green-200">
                      Đang chạy
                    </span>
                  )}
                </div>
                <div class="flex items-center gap-2 text-xs text-slate-500 mt-0.5">
                  <span>{formatDate(versionInfo.uploadedAt)}</span>
                  {versionInfo.size && (
                    <>
                      <span>•</span>
                      <span>{Math.round(versionInfo.size / 1024)} KB</span>
                    </>
                  )}
                  {versionInfo.changelog && (
                    <>
                      <span>•</span>
                      <span class="truncate max-w-32" title={versionInfo.changelog}>
                        {versionInfo.changelog}
                      </span>
                    </>
                  )}
                </div>
              </div>
            </div>

            <!-- Version Actions -->
            <div class="flex items-center gap-1 shrink-0">
              {!isActive && (
                <button
                  class="set-active-btn px-3 py-1.5 text-xs font-medium text-indigo-600 hover:text-indigo-700 border border-indigo-200 rounded-md hover:bg-indigo-50 transition-colors"
                  data-game-id={game.id}
                  data-version={versionInfo.version}
                >
                  Chọn làm bản chạy
                </button>
              )}
              
              <a
                href={`${CDN_BASE}/games/${game.id}/${versionInfo.version}/index.html`}
                target="_blank"
                class="px-3 py-1.5 text-xs font-medium text-slate-600 hover:text-slate-700 rounded-md hover:bg-slate-200 transition-colors"
                title="Xem game"
              >
                Xem
              </a>
              
              {isActive ? (
                <button
                  class="px-3 py-1.5 text-xs font-medium text-slate-400 rounded-md cursor-not-allowed"
                  disabled
                  title="Không thể xóa phiên bản đang chạy"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              ) : (
                <button
                  class="delete-version-btn px-3 py-1.5 text-xs font-medium text-red-600 hover:text-red-700 rounded-md hover:bg-red-50 transition-colors"
                  data-game-id={game.id}
                  data-version={versionInfo.version}
                  title="Xóa phiên bản"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              )}
            </div>
          </div>
        );
      })}
  </div>
</div>

<script>
  // Toggle version history
  document.querySelectorAll(".toggle-versions-btn").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const versionsList = btn.closest('.version-history')?.querySelector('.versions-list') as HTMLElement;
      const toggleText = btn.querySelector('.toggle-text') as HTMLElement;
      const toggleIcon = btn.querySelector('.toggle-icon') as HTMLElement;
      
      if (versionsList) {
        const isHidden = versionsList.style.display === 'none';
        
        if (isHidden) {
          versionsList.style.display = 'block';
          toggleText.textContent = 'Thu gọn';
          toggleIcon.style.transform = 'rotate(0deg)';
        } else {
          versionsList.style.display = 'none';
          toggleText.textContent = 'Mở rộng';
          toggleIcon.style.transform = 'rotate(-90deg)';
        }
      }
    });
  });
</script>

<style>
  @reference "tailwindcss";

  .version-history {
    @apply border-t border-slate-200 pt-4;
  }
  
  .version-item:hover .group {
    @apply bg-slate-200;
  }
  
  .toggle-icon {
    transition: transform 0.2s ease;
  }
</style>