  // Utility functions
  function formatFileSize(bytes: number): string {
    if (bytes === 0) return "0 B";
    const k = 1024;
    const sizes = ["B", "KB", "MB", "GB"];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + " " + sizes[i];
  }

  function getFileIcon(fileName: string): string {
    const ext = fileName.split(".").pop()?.toLowerCase();
    if (["html", "htm"].includes(ext || "")) return "üìÑ";
    if (["js", "mjs", "ts"].includes(ext || "")) return "üìú";
    if (["css", "scss", "less"].includes(ext || "")) return "üé®";
    if (["json"].includes(ext || "")) return "üìã";
    if (["png", "jpg", "jpeg", "gif", "svg", "webp"].includes(ext || ""))
      return "üñºÔ∏è";
    if (["mp3", "wav", "ogg"].includes(ext || "")) return "üîä";
    if (["mp4", "webm"].includes(ext || "")) return "üé¨";
    if (["woff", "woff2", "ttf", "otf"].includes(ext || "")) return "üî§";
    return "üìÅ";
  }

  function getStatusBadge(status: FileItem["status"]): string {
    switch (status) {
      case "pending":
        return '<span class="px-2 py-0.5 rounded text-xs bg-slate-200 text-slate-600 font-medium">Ch·ªù x·ª≠ l√Ω</span>';
      case "uploading":
        return '<span class="px-2 py-0.5 rounded text-xs bg-blue-50 text-blue-700 font-medium animate-pulse">ƒêang t·∫£i...</span>';
      case "success":
        return '<span class="px-2 py-0.5 rounded text-xs bg-emerald-50 text-emerald-700 font-medium">‚úì ƒê√£ t·∫£i</span>';
      case "error":
        return '<span class="px-2 py-0.5 rounded text-xs bg-red-50 text-red-700 font-medium">‚úó L·ªói</span>';
      default:
        return "";
    }
  }

  function showStatus(
    message: string,
    type: "error" | "success" | "info" | "warning"
  ) {
    statusMessage.classList.remove("hidden");
    statusMessage.className = `mb-6 p-4 rounded-lg text-sm font-medium ${
      type === "error"
        ? "bg-red-50 text-red-700 border border-red-200"
        : type === "success"
          ? "bg-emerald-50 text-emerald-700 border border-emerald-200"
          : type === "warning"
            ? "bg-amber-50 text-amber-700 border border-amber-200"
            : "bg-blue-50 text-blue-700 border border-blue-200"
    }`;
    statusMessage.textContent = message;
  }

  function hideStatus() {
    statusMessage.classList.add("hidden");
  }

  function getFolderStatus(files: FileItem[]): FolderGroup["status"] {
    const statuses = files.map(f => f.status);
    const uniqueStatuses = [...new Set(statuses)];
    
    if (uniqueStatuses.length === 1) return uniqueStatuses[0];
    if (statuses.some(s => s === "error")) return "error";
    if (statuses.some(s => s === "uploading")) return "uploading";
    if (statuses.some(s => s === "success") && statuses.some(s => s === "pending")) return "mixed";
    return "pending";
  }

  function getFolderIcon(folderName: string): string {
    if (folderName === "root") return "üìÅ";
    if (folderName.includes("assets") || folderName.includes("static")) return "üóÇÔ∏è";
    if (folderName.includes("css") || folderName.includes("styles")) return "üé®";
    if (folderName.includes("js") || folderName.includes("scripts")) return "üìú";
    if (folderName.includes("images") || folderName.includes("img")) return "üñºÔ∏è";
    if (folderName.includes("audio") || folderName.includes("sounds")) return "üîä";
    if (folderName.includes("fonts")) return "üî§";
    return "üìÇ";
  }

  function getFolderStatusBadge(status: FolderGroup["status"], completed: number, total: number): string {
    switch (status) {
      case "pending":
        return `<span class="px-2 py-0.5 rounded text-xs bg-slate-200 text-slate-600 font-medium">${total} file</span>`;
      case "uploading":
        return `<span class="px-2 py-0.5 rounded text-xs bg-blue-50 text-blue-700 font-medium animate-pulse">${completed}/${total} ƒëang t·∫£i...</span>`;
      case "success":
        return `<span class="px-2 py-0.5 rounded text-xs bg-emerald-50 text-emerald-700 font-medium">‚úì ${total} file</span>`;
      case "error":
        return `<span class="px-2 py-0.5 rounded text-xs bg-red-50 text-red-700 font-medium">‚úó L·ªói</span>`;
      case "mixed":
        return `<span class="px-2 py-0.5 rounded text-xs bg-amber-50 text-amber-700 font-medium">${completed}/${total}</span>`;
      default:
        return "";
    }
  }

  function renderFileList() {
    if (fileItems.length === 0) {
      fileListContainer.classList.add("hidden");
      return;
    }

    fileListContainer.classList.remove("hidden");
    fileCountLabel.textContent = `${fileItems.length} file ƒë√£ ch·ªçn`;

    // Group files by folder
    const folderGroups: Record<string, FolderGroup> = {};
    
    fileItems.forEach((item, index) => {
      const folderName = item.folder || "root";
      
      if (!folderGroups[folderName]) {
        folderGroups[folderName] = {
          name: folderName,
          files: [],
          totalSize: 0,
          status: "pending"
        };
      }
      
      folderGroups[folderName].files.push({ ...item, originalIndex: index } as any);
      folderGroups[folderName].totalSize += item.size;
    });

    // Update folder statuses
    Object.values(folderGroups).forEach(group => {
      group.status = getFolderStatus(group.files);
    });

    // Sort folders: root first, then alphabetically
    const sortedFolders = Object.values(folderGroups).sort((a, b) => {
      if (a.name === "root") return -1;
      if (b.name === "root") return 1;
      return a.name.localeCompare(b.name);
    });

    fileList.innerHTML = sortedFolders
      .map((folder) => {
        const completedFiles = folder.files.filter(f => f.status === "success").length;
        const displayName = folder.name === "root" ? "üìÅ Root Files" : `${getFolderIcon(folder.name)} ${folder.name}/`;
        
        return `
          <div class="folder-section mb-4">
            <!-- Folder Header -->
            <div class="flex items-center justify-between py-2 px-3 bg-slate-200 rounded-lg mb-2">
              <div class="flex items-center gap-2">
                <button class="folder-toggle text-slate-500 hover:text-slate-700 transition-colors" data-folder="${folder.name}">
                  <svg class="w-4 h-4 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <span class="text-sm font-medium text-slate-700">${displayName}</span>
                <span class="text-xs text-slate-500">${formatFileSize(folder.totalSize)}</span>
              </div>
              <div class="flex items-center gap-2">
                ${getFolderStatusBadge(folder.status, completedFiles, folder.files.length)}
